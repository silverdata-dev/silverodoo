<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="silver_ticket_tree_view" model="ir.ui.view">
            <field name="name">silver.ticket.tree</field>
            <field name="model">silver.ticket</field>
            <field name="arch" type="xml">
                <tree string="Tickets">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="ticket_type_id"/>
                    <field name="stage_id"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="silver_ticket_form_view" model="ir.ui.view">
            <field name="name">silver.ticket.form</field>
            <field name="model">silver.ticket</field>
            <field name="arch" type="xml">
                <form string="Ticket">
                    <header>
                        <!-- Agrega aquí los botones de flujo de trabajo si los necesitas -->
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="contract_id"/>
                                <field name="team_id"/>
                            </group>
                            <group>
                                <field name="ticket_type_id"/>
                                <field name="stage_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripción">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="silver_ticket_action" model="ir.actions.act_window">
            <field name="name">Tickets</field>
            <field name="res_model">silver.ticket</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="silver_ticket_main_menu" name="Tickets" sequence="10"/>
        <menuitem id="silver_ticket_submenu" name="Todos los Tickets" parent="silver_ticket_main_menu" action="silver_ticket_action" sequence="10"/>

    </data>
</odoo>
