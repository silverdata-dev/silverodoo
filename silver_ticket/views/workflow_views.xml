<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Silver Ticket Type (Process) Views -->
        <record id="view_silver_ticket_type_tree" model="ir.ui.view">
            <field name="name">silver.ticket.type.tree</field>
            <field name="model">silver.ticket.type</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="code"/>
                </list>
            </field>
        </record>

        <record id="view_silver_ticket_type_form" model="ir.ui.view">
            <field name="name">silver.ticket.type.form</field>
            <field name="model">silver.ticket.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Ej. Cambio de Plan"/></h1>
                        </div>
                        <group>
                            <field name="code"/>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Flujo de Etapas">
                                <field name="stage_config_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="helpdesk_stage_id"/>
                                        <field name="group_id"/>
                                        <field name="action_id"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_silver_ticket_type" model="ir.actions.act_window">
            <field name="name">Tipos de Proceso / Categorías</field>
            <field name="res_model">silver.ticket.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Configuration Menu -->
        <menuitem id="menu_silver_ticket_config" name="Configuración" parent="silver_ticket_main_menu" sequence="100"/>
        <menuitem id="menu_silver_ticket_type" name="Tipos de Proceso" parent="menu_silver_ticket_config" action="action_silver_ticket_type" sequence="10"/>

    </data>
</odoo>
