<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_silver_address_form_geo" model="ir.ui.view">
        <field name="name">silver.address.form.geo.inherit</field>
        <field name="model">silver.address</field>
        <field name="inherit_id" ref="silver_base.view_silver_address_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='coordinates_group']" position="after">
                <widget name="coordinate_picker_map"
                        latitude_field="latitude"
                        longitude_field="longitude"/>
            </xpath>
        </field>
    </record>
</odoo>
