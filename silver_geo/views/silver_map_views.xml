<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
 
        <!-- Client Action for the Map View -->
        <record id="action_silver_asset_map" model="ir.actions.client">
            <field name="name">Asset Map</field>
            <field name="tag">silver_geo.map_view</field>
        </record>

        <!-- Template for the Map View page -->
        <template id="map_view_template" name="Asset Map Page">
            <head>
                <title>Asset Map</title>
                <script type="text/javascript" src="/web/assets/debug/web.assets_backend.js"></script>
                <link rel="stylesheet" type="text/css" href="/web/assets/debug/web.assets_backend.css"/>
                <script type="module"  src="/silver_geo/static/src/js/map_view.js"></script>
                <link rel="stylesheet" href="/silver_geo/static/src/css/map_view.css"/>
            </head>
            <body>
                <div class="o_action_manager">
                    <div class="o_action o_view_controller">
                        <div class="o_content">
                            <div id="map-container" t-att-data-node-id="node_id if node_id else ''" class="w-100 h-100">
                                 <!--t t-call="AssetMapView"/-->
                                 <div t-ref="asset_map" class="map-container"/>
                <!--div t-ref="popup" class="ol-popup">
                    <a href="#" t-ref="popup_closer" class="ol-popup-closer"/>
                    <div t-ref="popup_content"/>
                </div-->
                            </div>
                        </div>
                    </div>
                </div>
            </body>
        </template>

    </data>
</odoo>
