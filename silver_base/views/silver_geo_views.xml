<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Municipality Views -->
        <record id="view_silver_municipality_tree" model="ir.ui.view">
            <field name="name">silver.municipality.tree</field>
            <field name="model">silver.municipality</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>
        <record id="view_silver_municipality_form" model="ir.ui.view">
            <field name="name">silver.municipality.form</field>
            <field name="model">silver.municipality</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="state_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- City Views -->
        <record id="view_silver_city_tree" model="ir.ui.view">
            <field name="name">silver.city.tree</field>
            <field name="model">silver.city</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="municipality_id"/>
                </tree>
            </field>
        </record>
        <record id="view_silver_city_form" model="ir.ui.view">
            <field name="name">silver.city.form</field>
            <field name="model">silver.city</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="municipality_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Parish Views -->
        <record id="view_silver_parish_tree" model="ir.ui.view">
            <field name="name">silver.parish.tree</field>
            <field name="model">silver.parish</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="city_id"/>
                </tree>
            </field>
        </record>
        <record id="view_silver_parish_form" model="ir.ui.view">
            <field name="name">silver.parish.form</field>
            <field name="model">silver.parish</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="city_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
