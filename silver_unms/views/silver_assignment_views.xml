<odoo>
    <data>
        <record id="silver_assignment_view_tree" model="ir.ui.view">
            <field name="name">silver.assignment.view.list</field>
            <field name="model">silver.assignment</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="zone_ids" widget="many2many_tags"/>
                    <field name="node_ids" widget="many2many_tags"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="silver_assignment_action" model="ir.actions.act_window">
            <field name="name">Asignaciones</field>
            <field name="res_model">silver.assignment</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
