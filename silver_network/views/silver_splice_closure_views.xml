<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="silver_splice_closure_view_form" model="ir.ui.view">
            <field name="name">silver.splice.closure.form</field>
            <field name="model">silver.splice.closure</field>
            <field name="arch" type="xml">
                <form string="Manga">
                    <sheet>
                        <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="node_id"/>
                            <field name="silver_address_id"/>
                            <field name="zone_id"/>
                            </group>
                            <group>
                                                        <field name="closure_type"/>
                            <field name="capacity"/>
                            <!--field name="brand_id"/-->
                            <!--field name="model"/-->


                            </group>
                        </group>
                        <notebook>

                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="silver_splice_closure_view_tree" model="ir.ui.view">
            <field name="name">silver.splice.closure.tree</field>
            <field name="model">silver.splice.closure</field>
            <field name="arch" type="xml">
                <tree string="Mangas">
                    <field name="name"/>
                    
                                                <field name="node_id"/>
                            <field name="zone_id"/>

                    <field name="closure_type"/>
                    <field name="capacity"/>

                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_silver_splice_closure" model="ir.actions.act_window">
            <field name="name">Mangas</field>
            <field name="res_model">silver.splice.closure</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
