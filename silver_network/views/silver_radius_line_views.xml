<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- isp.radius.line -->
        <record id="action_silver_radius_line" model="ir.actions.act_window">
            <field name="name">Líneas de Radius ISP</field>
            <field name="res_model">silver.radius.line</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="view_silver_radius_line_tree" model="ir.ui.view">
            <field name="name">silver.radius.line.list</field>
            <field name="model">silver.radius.line</field>
            <field name="arch" type="xml">
                <list string="Líneas de Radius ISP">
                    <field name="silver_radius_table_id"/>
                    <field name="silver_radius_column_id"/>
                    <field name="value_column"/>
                    <field name="silver_radius_attribute_id"/>
                    <field name="op"/>
                    <field name="value"/>
                    <field name="value_text"/>
                    <field name="function_radius"/>
                </list>
            </field>
        </record>

        <record id="view_silver_radius_line_form" model="ir.ui.view">
            <field name="name">silver.radius.line.form</field>
            <field name="model">silver.radius.line</field>
            <field name="arch" type="xml">
                <form string="Línea de Radius ISP">
                    <sheet>
                        <group>
                            <field name="silver_radius_table_id"/>
                            <field name="silver_radius_column_id"/>
                            <field name="value_column"/>
                            <field name="silver_radius_attribute_id"/>
                            <field name="op"/>
                            <field name="value"/>
                            <field name="value_text"/>
                            <field name="function_radius"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
