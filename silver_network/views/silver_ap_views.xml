<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_silver_ap_tree" model="ir.ui.view">
            <field name="name">silver.ap.tree</field>
            <field name="model">silver.ap</field>
            <field name="arch" type="xml">
                <tree string="Equipos AP Silver" default_order="name desc">
                    <field name="name"/>
                    <field name="hostname_ap"/>
                    <!--field name="brand_id"/-->
                    <field name="model"/>
                    <field name="node_id"/>
                    <field name="capacity_usage_ap"/>
                    <field name="core_id"/>
                    <field name="ip"/>
                    <field name="port"/>
                    <field name="username"/>
                    <!--field name="description_brand" invisible="1"/-->
                    <field name="state" invisible="1"/>
                    <field name="state" widget="badge" decoration-danger="state == 'down'"
                           decoration-success="state == 'active'"/>
                    <!--widget name="web_ribbon" title="Activo" invisible="state != 'active'"/>
                    <widget name="web_ribbon" title="Down" bg_color="bg-danger" invisible="state == 'active'"/-->


                </tree>
            </field>
        </record>

        <record id="view_silver_ap_form" model="ir.ui.view">
            <field name="name">silver.ap.form</field>
            <field name="model">silver.ap</field>
            <field name="arch" type="xml">
                <form string="Equipo AP Silver">
                    <sheet>
                        <div class="oe_button_box" name="button_box">


                        </div>
                        <widget name="web_ribbon" title="Active" invisible="(state == 'down') "/>
                        <widget name="web_ribbon" title="Down" bg_color="bg-danger" invisible="(state == 'active') "/>
                        <field name="state" invisible="1"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="ap">
                            <group>
                                <field name="hostname_ap"/>
 <field name="node_id"/>
                                <field name="core_id"/>
                                <field name="node_ids" widget="many2many_tags" invisible="1" can_create="true"
                                       can_write="true" readonly="1"/>
                            </group>
  <group name="core_conexion" string="Datos Conexion">

                                <field name="ip"/>
                                <field name="port"/>

                                <field name="username"/>
                                <field name="password" password="True"/>
                            <!--button name="action_connect_ap" type="object" class="oe_stat_button" icon="fa-signal"
                                    string="Probar Conexion"/-->
  <button name="button_test_connection" type="object" string="Test Connection" class="oe_highlight"/>

                        </group>
                        </group>
                                              <notebook colspan="4">
  <page string="Direcciones IP" invisible="type_access_net not in ['dhcp', 'dhcp_leases']">

                                <field name="ip_address_pool_ids" nolabel="1" widget="one2many_list">
                                    <tree multi_selectable="1" colspan="2" editable="bottom">
                                        <field name="name" readonly="True"/>
                                        <field name="network"/>
                                        <field name="nmask"/>

                                        <field name="total_ips"/>
                                        <field name="used_ips"/>
                                        <field name="usage_percentage" widget="progressbar"/>
                                    </tree>
                                </field>


                                <button name="generar" string="Generar IPs" type="object"/>

                                <field name="ip_address_ids" nolabel="1">
                                </field>

                            </page>

                             <page string="ConfiguraciÃ³n general" name="config">

                        <group>
                            <group name="ip_address" string="Direccionamiento IP">
                                <field name="type_access_net" required="1"/>
                                <field name="dhcp_custom_server" invisible="type_access_net != 'dhcp_leases'"/>
                                <field name="interface" invisible="type_access_net != 'dhcp_leases'"/>
                                <field name="is_dhcp_static" invisible="type_access_net != 'ip_fija'"
                                       widget="boolean_toggle"/>
                            </group>
                            <group name="capacity" string="Capacidad Usada AP">
                                <field name="capacity_usage_ap" readonly="1"/>
                                <field name="is_mgn_mac_onu" widget="boolean_toggle"/>
                            </group>
                        </group>
 <group string="Datos Ubicacion">
                                    <group>
                                        <field name="country_id" can_create="false" can_write="false"/>
                                        <field name="state_id" can_create="true" can_write="true"/>
                                        <!--field name="zip"/-->
                                    </group>
                                    <group>
                                        <field name="street"/>
                                        <field name="street2"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Geolocalizacion">
                                        <label for="date_localization" string="Geolocalizacion"/>
                                        <div>
                                            <span>Lat :</span>
                                            <field name="gps_lat" nolabel="1" class="oe_inline"/>
                                            <span>, Long:</span>
                                            <field name="gps_lon" nolabel="1" class="oe_inline"/>
                                            <br/>
                                            <span invisible="date_localization == False">Actualizado el:</span>
                                            <field name="date_localization" nolabel="1" class="oe_inline"/>
                                        </div>
                                    </group>
                                </group>
                             </page>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>



    <record id="view_ap_search" model="ir.ui.view">
        <field name="name">silver.ap.search.view</field>
        <field name="model">silver.ap</field>
        <field name="arch" type="xml">
            <search string="Equipos AP">
                <field name="name"/>
                <field name="hostname_ap"/>
                <field name="node_id" />
                <group expand="1" string="Group By">
                    <filter name="group_by_node_id" string="Nodo" domain="[]"  context="{'group_by':'node_id'}"/>
                </group>
            </search>
        </field>
    </record>

        <record id="action_silver_ap" model="ir.actions.act_window">
            <field name="name">Equipos AP</field>
            <field name="res_model">silver.ap</field>
            <field name="view_mode">tree,form</field>
                      <field name="view_id" ref="view_silver_ap_tree"/>
            <field name="context">{'search_default_group_by_node_id': 1}</field>

        </record>

    </data>
</odoo>
