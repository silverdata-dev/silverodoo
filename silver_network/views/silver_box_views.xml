<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- silver.box -->
        <record id="action_silver_box" model="ir.actions.act_window">
            <field name="name">Cajas NAP</field>
            <field name="res_model">silver.box</field>
            <field name="view_mode">list,form</field>

            <field name="context">{'search_default_group_by_node_id': 1}</field>
        </record>


    <record id="view_box_search" model="ir.ui.view">
        <field name="name">silver.box.search.view</field>
        <field name="model">silver.box</field>
        <field name="arch" type="xml">
            <search string="Cajas NAP">
                <field name="name"/>
                <field name="node_id" />
                <filter name="group_by_node_id"
                    string="Nodo"
                    context="{'group_by':'node_id'}"
                    />
            </search>
        </field>
    </record>

        <record id="view_silver_box_tree" model="ir.ui.view">
            <field name="name">silver.box.list</field>
            <field name="model">silver.box</field>
            <field name="arch" type="xml">
                <list string="Cajas NAP" default_order="name desc">
                    <field name="name" widget="record_link"/>
                    <field name="node_id" widget="many2one"/>
                    <field name="core_id" widget="many2one"/>
                    <field name="olt_id" widget="many2one"/>
                    <field name="olt_port_id" widget="many2one"/>
                    <field name="capacity_nap"/>
                    <field name="capacity_usage_nap"/>
                    <field name="silver_address_id"/>
                </list>
            </field>
        </record>

        <record id="view_silver_box_form" model="ir.ui.view">
            <field name="name">silver.box.form</field>
            <field name="model">silver.box</field>
            <field name="arch" type="xml">
                <form string="Caja Nap">
                    <sheet string="Caja NAP">
                        <div class="oe_button_box" name="button_box">
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre Caja NAP" />
                            </h1>
                        </div>
                        <group>
                            <group string="Datos">
                                <field name="port_splitter_secondary" invisible="1"/>
                                <field name="splitter_id" readonly="1" on_change="1" can_create="true" can_write="true"
                                       modifiers="{&quot;readonly&quot;: true}"  invisible="1"/>
                                <field name="silver_address_id" context="{'show_coordinates': True}"/>
                                <!--label for="latitude" string="Coordenadas" invisible="not context.get('show_coordinates')"/>
                                <div invisible="not context.get('show_coordinates')">
                                    <field name="latitude" class="oe_inline"/>, <field name="longitude" class="oe_inline"/>
                                </div-->
                                <field name="node_id"  required="1"/>
                                <field name="core_id" required="1" domain="[('node_id', '=', node_id)]"/>
                                <field name="olt_id" required="1"  domain="[('core_ids', 'in', core_id)]"/>
                                <field name="olt_port_id" required="1" domain="[('olt_id', '=', olt_id)]"/>

                            </group>
                            <group string="Capacidad NAP">
                                <field name="capacity_nap" />
                                <field name="capacity_usage_nap" modifiers="{&quot;readonly&quot;: true}"/>
                            </group>
                        </group>

                        <!--group string="Datos Ubicacion">
                            <group>
                                <field name="country_id" can_create="false" can_write="false" />
                                <field name="state_id" can_create="true" can_write="true" />

                            </group>
                            <group>
                                <field name="street" />
                                <field name="street2" />
                            </group>
                        </group-->
                        <group>
                            <!--group string="Geolocalizacion">
                                <label for="date_localization" string="Geolocalizacion"/>
                                <div>
                                    <span>Lat :</span>
                                    <field name="gps_lat" nolabel="1" class="oe_inline" />
                                    <span>, Long:</span>
                                    <field name="gps_lon" nolabel="1" class="oe_inline" />
                                    <br/>
                                    <span invisible="date_localization==False"
                                          modifiers="{&quot;invisible&quot;: [[&quot;date_localization&quot;, &quot;=&quot;, false]]}">
                                        Actualizado el:
                                    </span>
                                    <field name="date_localization" nolabel="1" class="oe_inline" />

                                </div>
                            </group-->
                            <group name="vlan_port" string="Vlan Administrativa" invisible="is_line_nap==False"
                                 >
                                <field name="is_line_nap" widget="boolean_toggle" invisible="1"/>
                                <field name="s_vlan" />
                                <field name="c_vlan" />
                            </group>
                        </group>

                        <notebook>
                            <!--page string="Series Onu" colspan="4">
                                <field name="onu_ids_silver" nolabel="1" >
                                </field>
                            </page-->
                        </notebook>
                    </sheet>
                    <div class="o_attachment_preview"/>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>
