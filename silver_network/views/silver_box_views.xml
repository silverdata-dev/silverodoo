<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- silver.box -->
        <record id="action_silver_box" model="ir.actions.act_window">
            <field name="name">Cajas NAP</field>
            <field name="res_model">silver.box</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_silver_box_tree" model="ir.ui.view">
            <field name="name">silver.box.tree</field>
            <field name="model">silver.box</field>
            <field name="arch" type="xml">
                <tree string="Cajas NAP Silver" default_order="name desc">
                    <field name="name"/>
                    <field name="capacity_nap"/>
                    <field name="capacity_usage_nap"/>
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="street"/>
                </tree>
            </field>
        </record>

        <record id="view_silver_box_form" model="ir.ui.view">
            <field name="name">silver.box.form</field>
            <field name="model">silver.box</field>
            <field name="arch" type="xml">
                <form string="Caja Nap Silver">
                    <sheet string="Caja NAP Silver">
                        <div class="oe_button_box" name="button_box">
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre Caja NAP" modifiers="{}"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Datos">
                                <field name="port_splitter_secondary" modifiers="{}"/>
                                <field name="splitter_id" readonly="1" on_change="1" can_create="true" can_write="true"
                                       modifiers="{&quot;readonly&quot;: true}"/>
                                <field name="node_id" invisible="1" can_create="true" can_write="true"
                                       modifiers="{&quot;invisible&quot;: true, &quot;readonly&quot;: true}"/>
                            </group>
                            <group string="Capacidad NAP">
                                <field name="capacity_nap" modifiers="{}"/>
                                <field name="capacity_usage_nap" modifiers="{&quot;readonly&quot;: true}"/>
                            </group>
                        </group>

                        <group string="Datos Ubicacion">
                            <group>
                                <field name="country_id" can_create="false" can_write="false" modifiers="{}"/>
                                <field name="state_id" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="zip" modifiers="{}"/>
                            </group>
                            <group>
                                <field name="street" modifiers="{}"/>
                                <field name="street2" modifiers="{}"/>
                            </group>
                        </group>
                        <group>
                            <group string="Geolocalizacion">
                                <label for="date_localization" string="Geolocalizacion"/>
                                <div>
                                    <span>Lat :</span>
                                    <field name="gps_lat" nolabel="1" class="oe_inline" modifiers="{}"/>
                                    <span>, Long:</span>
                                    <field name="gps_lon" nolabel="1" class="oe_inline" modifiers="{}"/>
                                    <br/>
                                    <span invisible="date_localization==False"
                                          modifiers="{&quot;invisible&quot;: [[&quot;date_localization&quot;, &quot;=&quot;, false]]}">
                                        Actualizado el:
                                    </span>
                                    <field name="date_localization" nolabel="1" class="oe_inline" modifiers="{}"/>
                                    <field name="is_line_nap" widget="boolean_toggle" invisible="1"/>
                                </div>
                            </group>
                            <group name="vlan_port" string="Vlan Administrativa" invisible="is_line_nap==False"
                                 >
                                <field name="s_vlan" modifiers="{}"/>
                                <field name="c_vlan" modifiers="{}"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Series Onu" colspan="4">
                                <field name="onu_ids_silver" nolabel="1" modifiers="{}">
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="o_attachment_preview"/>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" modifiers="{}"/>
                        <field name="activity_ids" modifiers="{}"/>
                        <field name="message_ids" modifiers="{}"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>
