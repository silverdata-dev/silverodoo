<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- isp.ip.address.pool -->
        <record id="action_silver_ip_address_pool" model="ir.actions.act_window">
            <field name="name">Líneas de Dirección IP ISP</field>
            <field name="res_model">silver.ip.address.pool</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_silver_ip_address_pool_tree" model="ir.ui.view">
            <field name="name">silver.ip.address.pool.tree</field>
            <field name="model">silver.ip.address.pool</field>
            <field name="arch" type="xml">
                <tree string="Líneas de Dirección IP ISP">
                    <field name="name"/>
                    <field name="network"/>
                    <field name="nmask"/>
                    <field name="gateway"/>


                    <field name="is_tr_069"/>

                     <field name="total_ips"/>
                            <field name="used_ips"/>
                            <field name="usage_percentage" widget="progressbar"/>

                </tree>
            </field>
        </record>

        <record id="view_silver_ip_address_pool_form" model="ir.ui.view">
            <field name="name">silver.ip.address.pool.form</field>
            <field name="model">silver.ip.address.pool</field>
            <field name="arch" type="xml">
                <form string="Línea de Dirección IP ISP">
                        <header>
                    <button name="action_generate_ips" type="object" string="Generate IPs" class="oe_highlight"/>
                    <button name="action_clear_ips" type="object" string="Borrar IPs" class="oe_highlighte"/>
                </header>
                    <sheet>
                        <group>
                                 <group>
                            <field name="name"/>
                                                <field name="network" widget="ip_address"/>
                    <field name="nmask"/>
                                     <field name="mask" readonly="True"/>
                    <field name="gateway" widget="ip_address"/>

                            <field name="is_tr_069"/>
                                          </group>
                            <group>
                                 <field name="total_ips"/>
                            <field name="used_ips"/>
                            <field name="usage_percentage" widget="progressbar"/>
                            </group>
                        </group>
                        <notebook>
                             <page string="IPs">
                                 <field name="address_ids">
                                      <tree string="IP Ranges">
                <field name="name"/>
                <field name="cidr"/>
                <field name="used"/>


            </tree>
                                 </field>
                             </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>



    <record id="silver_ip_address_pool_action" model="ir.actions.act_window">
        <field name="name">Pools de IP</field>
        <field name="res_model">silver.ip.address.pool</field>
        <field name="view_mode">tree,form</field>
    </record>


    </data>
</odoo>
