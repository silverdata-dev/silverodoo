<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- isp.ip.address Views -->
    <record id="silver_ip_address_view_tree" model="ir.ui.view">
        <field name="name">silver.ip.address.tree</field>
        <field name="model">silver.ip.address</field>
        <field name="arch" type="xml">
            <tree string="IP Ranges">
                <field name="name"/>
                <field name="cidr"/>


                                            <field name="ip_int" column_invisible="1"/>
                <field name="line_id"/>
                <field name="core_id"/>
                <field name="olt_id"/>
                <field name="olt_port_id"/>


            </tree>
        </field>
    </record>

    <record id="silver_ip_address_view_form" model="ir.ui.view">
        <field name="name">silver.ip.address.form</field>
        <field name="model">silver.ip.address</field>
        <field name="arch" type="xml">
            <form string="IP Range">

                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Public IPs Sector A"/></h1>
                    </div>
                    <group>

                                            <field name="ip_int" column_invisible="1"/>
                            <field name="cidr"/>
                            <field name="line_id"/>
                <field name="core_id"/>
                <field name="olt_id"/>
                <field name="olt_port_id"/>


                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="silver_ip_address_action" model="ir.actions.act_window">
        <field name="name">IP Ranges</field>
        <field name="res_model">silver.ip.address</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>