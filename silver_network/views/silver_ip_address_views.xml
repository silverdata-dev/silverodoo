<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- isp.ip.address Views -->
    <record id="silver_ip_address_view_tree" model="ir.ui.view">
        <field name="name">silver.ip.address.list</field>
        <field name="model">silver.ip.address</field>
        <field name="arch" type="xml">
            <list string="Direcciones IP" default_order="public asc, ip_int asc">
                <field name="name"/>
                <field name="cidr"/>
                <field name="pool_id"/><field name="public"/>


                                            <field name="ip_int" column_invisible="1"/>

                          <field name="public"/>
                       <field name="core_id" invisible="public"/>
                                <field name="olt_id"  invisible="public"/>
                                <field name="olt_port_id" domain="[('olt_id', '=', olt_id)]"  invisible="public"/>
                                <field name="zone_ids" invisible="not public"  widget="many2many_tags"/>
                                <field name="node_ids" invisible="not public"  widget="many2many_tags"/>
                                <field name="core_ids" invisible="not public"  widget="many2many_tags"/>


            </list>
        </field>
    </record>

    <record id="silver_ip_address_view_form" model="ir.ui.view">
        <field name="name">silver.ip.address.form</field>
        <field name="model">silver.ip.address</field>
        <field name="arch" type="xml">
            <form string="Dirección IP">

                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Public IPs Sector A"/></h1>
                    </div>
                    <group><group>


                                            <field name="ip_int" column_invisible="1"/>
                            <field name="cidr"/>
                            <field name="pool_id"/>

                    </group>


  <group string="Relación">

                                      <field name="public"/>
                                <field name="core_id" invisible="public"/>
                                <field name="olt_id"  invisible="public"/>
                                <field name="olt_port_id" domain="[('olt_id', '=', olt_id)]"  invisible="public"/>
                                <field name="zone_ids" invisible="not public"  widget="many2many_tags"/>
                                <field name="node_ids" invisible="not public"  widget="many2many_tags"/>
                                <field name="core_ids" invisible="not public"  widget="many2many_tags"/>

                            </group>



                    </group>

                </sheet>
            </form>
        </field>
    </record>




        <record id="silver_ip_address_search" model="ir.ui.view">
            <field name="name">silver.ip.address.search</field>
             <field name="model">silver.ip.address</field>
            <field name="arch" type="xml">
                <search string="Direcciones Ip">
                    <field name="name" string="Dirección"/>
                    <field name="pool_id"/>
 <filter name="group_by_pool_id" string="Pool"  context="{'group_by':'pool_id'}"/>


                </search>
            </field>
        </record>




    <record id="silver_ip_address_action" model="ir.actions.act_window">
        <field name="name">Direcciones IP</field>
        <field name="res_model">silver.ip.address</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'group_by': 'pool_id'}</field>
    </record>


</odoo>