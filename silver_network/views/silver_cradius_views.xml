<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_silver_core_cradius_inherit" model="ir.ui.view">
            <field name="name">silver.core.cradius.inherit</field>
            <field name="model">silver.core</field>
            <field name="inherit_id" ref="silver_network.view_silver_core_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='radius_id']" position="attributes">
                    <attribute name="invisible">is_radius==True</attribute>
                    <attribute name="domain">[('is_radius', '=', True)]</attribute>
                      <attribute name="context">{'open_product_template': True, 'default_is_radius':True}</attribute>
                </xpath>
<xpath expr="//field[@name='radius_admin_id']" position="attributes">
                    <attribute name="invisible">is_radius==True</attribute>
                    <attribute name="domain">[('is_radius', '=', True)]</attribute>
     <attribute name="context">{'open_product_template': True, 'default_is_radius':True}</attribute>
                </xpath>
                <!--xpath expr="//header" position="inside">

                            <button name="button_test_connection" type="object" string="Test Connection"
                                    class="oe_highlight" invisible="is_radius==False" />
                            <button name="button_get_system_info" type="object" string="Get System Info"  invisible="is_radius==False" />
                            <button name="button_view_interfaces" type="object" string="View Interfaces" invisible="is_radius==False" />
                            <button name="button_view_routes" type="object" string="View Routes" invisible="is_radius==False" />
                            <button name="button_view_ppp_active" type="object" string="View PPP Active" invisible="is_radius==False" />
                            <button name="button_view_firewall_rules" type="object" string="View Firewall Rules" invisible="is_radius==False" />
                            <button name="button_view_queues" type="object" string="View Queues" invisible="is_radius==False" />
                            <field name="state" widget="statusbar" statusbar_visible="down,active" invisible="is_radius==False" />

                </xpath-->

                <xpath expr="//header" position="inside">
                                                <!--button name="action_view_radius_users" type="object" class="oe_stat_button" icon="fa-users"
                                    string="RADIUS Users">
                                <field name="radius_user_count" widget="statinfo" string="Users"/>
                            </button>
                            <button name="action_pull_users_from_mikrotik" type="object"
                                    string="Pull Users from MikroTik" class="oe_highlight"/-->

                    <div class="oe_button_box" name="button_box"  invisible="is_radius==False" >
                            <!--button name="action_connect_radius" type="object" class="oe_stat_button" icon="fa-signal"
                                    string="Probar Conexion"/>
                            <button name="action_view_table" type="object" class="oe_stat_button" icon="fa-signal"
                                    string="Obtener Tabla"/-->
                        </div>
                </xpath>
                <xpath expr="//group[@name='core']" position="inside">
                     <group name="isradius">
                                <field name="is_radius"/>
                         <field name="type_radius" invisible="1"/>
                            </group>
                </xpath>

                <xpath expr="//page[@name='config']" position="before">
                     <page string="Clientes Radius" name="cores"  invisible="is_radius==False" >
                                <field name="core_ids" nolabel="1">
                                    <list>
                                                <field name="id" column_invisible="1"/>
                                                <field name="name" widget="record_link"/>

                                        <field name="hostname_core"/>
                                        <field name="ip"/>
                                    </list>
                                </field>
                            </page>
                            <page name="isp_radius_ids" string="Radius Atributos"
                                  invisible="type_radius == 'mk_radius' or is_radius==False" >
                                <field name="silver_radius_ids" nolabel="1">
                                    <list string="LÃ­neas de Radius ISP" editable="bottom" colspan="4">
                                        <field name="silver_radius_table_id"/>
                                        <field name="silver_radius_column_id"/>
                                        <field name="value_column"/>
                                        <field name="silver_radius_attribute_id"/>
                                        <field name="op"/>
                                        <field name="value"/>
                                        <field name="value_text"/>
                                        <field name="function_radius"/>
                                    </list>
                                </field>
                            </page>
                            <page name="isp_gestion_radius" string="Gestion Radius"
                                  invisible="type_radius == 'mk_radius' or is_radius==False">
                                <group>
                                    <group>
                                        <field name="type_table"/>
                                        <field name="is_cutoff" widget="boolean_toggle"/>
                                        <field name="is_realm_port" widget="boolean_toggle"/>
                                        <field name="is_user_profile" widget="boolean_toggle"/>
                                        <field name="is_extract_ip_rd" widget="boolean_toggle"/>
                                    </group>
                                </group>
                            </page>
                            <page name="isp_mikrotik_radius_ids" string="MK Radius Atrib"
                                  invisible="type_radius != 'mk_radius' or is_radius==False">
                                <group string="Metodo de conexi&#243;n">
                                    <field name="is_pppoe" widget="boolean_toggle"/>
                                    <field name="is_ipoe" widget="boolean_toggle"/>
                                    <field name="radius_domain" widget="boolean_toggle"/>
                                    <field name="domain_text" invisible="not radius_domain"/>
                                    <field name="general_key" widget="boolean_toggle"/>
                                    <field name="general_key_text" invisible="not general_key"/>
                                </group>
                                <group>
                                    <group string="Perfiles">
                                        <field name="profile_active"/>
                                        <field name="profile_cut"/>
                                        <field name="profile_suspended"/>
                                    </group>
                                    <group string="Usuario">
                                        <field name="code_mac" widget="radio"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Control de Velocidad">
                                        <field name="default_control" widget="boolean_toggle"/>
                                        <field name="perfil_control" widget="boolean_toggle"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Nas" name="nas" invisible="is_radius==False">
                                <group name="mikrotik_nas_config" string="MikroTik NAS Configuration">
                                    <group>
                                        <field name="nas_address"/>
                                        <field name="nas_secret" password="True"/>
                                        <field name="radius_client_ip"/>
                                        <field name="radius_client_secret" password="True"/>
                                        <field name="radius_client_services" widget="many2many_tags"/>
                                    </group>
                                    <!--group>
                                        <button name="button_manage_nas_clients" string="Manage NAS Clients"
                                                type="object" class="oe_highlight"/>
                                        <button name="button_add_update_radius_client" string="Add/Update Radius Client"
                                                type="object" class="oe_highlight"/>
                                        <button name="button_remove_radius_client" string="Remove Radius Client"
                                                type="object" class="oe_highlight"/>
                                        <button name="action_open_disconnect_wizard" string="Disconnect Session"
                                                type="object" class="oe_highlight"/>
                                    </group-->
                                </group>
                            </page>

                    <page string="Usuarios" invisible="is_radius==False">
                        <button name="action_pull_users_from_mikrotik" type="object"
                                    string="Pull Users from MikroTik" class="oe_highlight"/>

                        <field name="user_ids"/>
                    </page>
                </xpath>
            </field>
        </record>




        <record id="action_silver_radius_table" model="ir.actions.act_window">
            <field name="name">Tablas Radius</field>
            <field name="res_model">silver.radius.table</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_silver_radius_table_tree" model="ir.ui.view">
            <field name="name">silver.radius.table.tree</field>
            <field name="model">silver.radius.table</field>
            <field name="arch" type="xml">
                <list string="Tabla Radius">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="view_silver_radius_table_form" model="ir.ui.view">
            <field name="name">silver.radius.table.form</field>
            <field name="model">silver.radius.table</field>
            <field name="arch" type="xml">
                <form string="Columnas Radius">
                    <sheet string="Servidores Radius">
                        <group name="radius">
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name="isp_radius_columns" string="Radius Columnas">
                                <field name="silver_radius_columns" nolabel="1">
                                    <list editable="bottom">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- isp.radius.column -->
        <record id="view_silver_radius_column_tree" model="ir.ui.view">
            <field name="name">silver.radius.column.tree</field>
            <field name="model">silver.radius.column</field>
            <field name="arch" type="xml">
                <list string="Radius Column">
                    <field name="name"/>
                    <field name="radius_table_id"/>
                </list>
            </field>
        </record>

        <record id="view_silver_radius_column_form" model="ir.ui.view">
            <field name="name">silver.radius.column.form</field>
            <field name="model">silver.radius.column</field>
            <field name="arch" type="xml">
                <form string="Radius Column">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="radius_table_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- isp.radius.attributes -->
        <record id="action_silver_radius_attributes" model="ir.actions.act_window">
            <field name="name">Atributos Radius</field>
            <field name="res_model">silver.radius.attributes</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_silver_radius_attributes_tree" model="ir.ui.view">
            <field name="name">silver.radius.attributes.tree</field>
            <field name="model">silver.radius.attributes</field>
            <field name="arch" type="xml">
                <list string="Atributos Radius">
                    <field name="name"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <record id="view_silver_radius_attributes_form" model="ir.ui.view">
            <field name="name">silver.radius.attributes.form</field>
            <field name="model">silver.radius.attributes</field>
            <field name="arch" type="xml">
                <form string="Atributos Radius">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>