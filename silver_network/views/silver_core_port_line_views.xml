<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- silver.core.port.line -->
        <record id="action_silver_core_port_line" model="ir.actions.act_window">
            <field name="name">Líneas de Puerto</field>
            <field name="res_model">silver.core.port.line</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="view_silver_core_port_line_tree" model="ir.ui.view">
            <field name="name">silver.core.port.line.list</field>
            <field name="model">silver.core.port.line</field>
            <field name="arch" type="xml">
                <list string="Líneas de Puerto">
                    <field name="name"/>
                    <field name="core_id"/>
                </list>
            </field>
        </record>

        <record id="view_silver_core_port_line_form" model="ir.ui.view">
            <field name="name">silver.core.port.line.form</field>
            <field name="model">silver.core.port.line</field>
            <field name="arch" type="xml">
                <form string="Línea de Puerto">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="core_id"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
