<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- isp.vlan -->
        <record id="action_silver_vlan" model="ir.actions.act_window">
            <field name="name">VLANs ISP</field>
            <field name="res_model">silver.vlan</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="view_silver_vlan_tree" model="ir.ui.view">
            <field name="name">silver.vlan.list</field>
            <field name="model">silver.vlan</field>
            <field name="arch" type="xml">
                <list string="VLANs ISP">
                    <field name="name"/>
                    <field name="vlanid"/>
                    <field name="vtype"/>
                    <field name="node_id"/>
                    <field name="core_id"/>
                    <field name="olt_id"/>
                    <field name="olt_port_id"/>
                </list>
            </field>
        </record>

        <record id="view_silver_vlan_form" model="ir.ui.view">
            <field name="name">silver.vlan.form</field>
            <field name="model">silver.vlan</field>
            <field name="arch" type="xml">
                <form string="VLAN ISP">
                    <sheet>
                             <div class="oe_title">
                            <h1>
                                <field name="vlanid"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                             <field name="name"/>
                            <field name="vtype"/>
                                </group>
                            <group string="RelaciÃ³n">
                            <field name="node_id"/>
                                <field name="core_id" domain="[('node_id', '=', node_id)]"/>
                                <field name="olt_id" domain="['|',('core_ids', 'in', core_id),('node_id','=',node_id)]"/>
                                <field name="olt_port_id" domain="[('olt_id','=',olt_id)]"/>
                            <!--field name="core_ids"  widget="many2many_tags" domain="[('node_id', '=', node_id)]"/>
                            <field name="olt_ids"  widget="many2many_tags"  domain="[('node_id', '=', node_id)]"/>/>
                            <field name="olt_port_ids" widget="many2many_tags"  domain="[('olt_id', 'in', olt_ids)]"/>/-->
                                </group>
                        </group>
<notebook>

</notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
