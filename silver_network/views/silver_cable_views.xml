<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="silver_cable_view_form" model="ir.ui.view">
            <field name="name">silver.cable.form</field>
            <field name="model">silver.cable</field>
            <field name="arch" type="xml">
                <form string="Cable">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="cable_type"/>
                          <field name="line_string_wkt"/>
                        </group>
                        <notebook>

                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="silver_cable_view_tree" model="ir.ui.view">
            <field name="name">silver.cable.tree</field>
            <field name="model">silver.cable</field>
            <field name="arch" type="xml">
                <tree string="Cables">
                    <field name="name"/>
                    <field name="cable_type"/>
                    <field name="line_string_wkt"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_silver_cable" model="ir.actions.act_window">
            <field name="name">Cables</field>
            <field name="res_model">silver.cable</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
