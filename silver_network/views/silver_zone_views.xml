<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_silver_zone_form_inherit" model="ir.ui.view">
            <field name="name">silver.zone.form.inherit</field>
            <field name="model">silver.zone</field>
            <field name="inherit_id" ref="silver_base.view_silver_zone_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Nodos">

                            <field name="node_ids">
                                <tree string="Nodos" default_order="name desc" create="false" delete="false">
                                                                <field name="id" column_invisible="1"/>
                                                <field name="name" widget="record_link"/>

                                    <field name="code"/>
                                    <field name="silver_address_id" widget="many2one"/>
                                    <button name="action_unlink_from_zone" class="bleft" type="object" string="" icon="fa-chain-broken"/>
                                </tree>
                            </field>
                              <div class="o_action_manager">
                                            <button name="action_open_nodes_to_link" type="object" string="Agregar..." class="btn-link nobold"/>
                                            <button name="action_create_and_link_node" type="object" string="Crear" class="btn-link nobold"/>
                                        </div>
                        </page>
                    </notebook>

                </xpath>
            </field>
        </record>

        <record id="view_silver_zone_tree_inherit" model="ir.ui.view">
            <field name="name">silver.zone.tree.inherit</field>
            <field name="model">silver.zone</field>
            <field name="inherit_id" ref="silver_base.view_silver_zone_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="node_count"/>
                </xpath>
            </field>
        </record>



    </data>
</odoo>
