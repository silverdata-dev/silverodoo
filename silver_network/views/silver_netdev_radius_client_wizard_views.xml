<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="silver_netdev_radius_client_wizard_form_view" model="ir.ui.view">
            <field name="name">silver.netdev.radius.client.wizard.form</field>
            <field name="model">silver.netdev.radius.client.wizard</field>
            <field name="arch" type="xml">
                <form string="Manage MikroTik Radius Client Configuration">
                    <sheet>
                        <group>
                            <field name="netdev_id" invisible="1"/>
                            <field name="radius_client_ip"/>
                            <field name="radius_client_secret" password="True"/>
                            <field name="radius_client_services" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Add/Update Radius Client" name="action_add_update_radius_client" type="object" class="oe_highlight"/>
                        <button string="Remove Radius Client" name="action_remove_radius_client" type="object" class="oe_highlight"/>
                        <button string="View All Radius Clients" name="action_view_radius_clients" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_silver_netdev_radius_client_wizard"
            name="Manage MikroTik Radius Client Configuration"
            res_model="silver.netdev.radius.client.wizard"
            view_mode="form"
            target="new"
            binding_model="silver.netdev"/>
    </data>
</odoo>