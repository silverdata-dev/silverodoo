<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- product.brand -->
        <record id="action_product_brand" model="ir.actions.act_window">
            <field name="name">Marcas de Productos</field>
            <field name="res_model">product.brand</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="view_product_brand_tree" model="ir.ui.view">
            <field name="name">product.brand.list</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <list string="Marcas de Productos">
                    <field name="name"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <record id="view_product_brand_form" model="ir.ui.view">
            <field name="name">product.brand.form</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <form string="Marca de Producto">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="partner_ids" widget="many2many_tags"/>
                            <field name="logo" widget="image"/>
                        </group>
                        <notebook>
                            <!--page string="Modelos">
                                <field name="model_ids">
                                        <list string="Modelos">
                                                <field name="id" column_invisible="1"/>
                                                <field name="name" widget="record_link"/>

                                                <field name="etype"/>
                </list>
                                </field>

                            </page-->
                            <page string="Productos">
                                  <field name="product_ids">

                                  </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
