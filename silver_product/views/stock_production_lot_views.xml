<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_stock_production_lot_tree_silver" model="ir.ui.view">
            <field name="name">stock.lot.tree.silver</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <tree string="Lotes/Números Seriales" multi_edit="1">
                    <field name="name" decoration-bf="1"/>
                    <field name="ref" optional="show"/>
                    <field name="product_id" readonly="1"/>
                    <field name="create_date" optional="show"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="last_delivery_partner_id" optional="hide" string="Transfer to"/>
                </tree>
            </field>
        </record>

        <record id="action_stock_production_lot_silver" model="ir.actions.act_window">
            <field name="name">Lotes/Números Seriales</field>
            <field name="res_model">stock.lot</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_stock_production_lot_tree_silver"/>
            <field name="context">{'search_default_group_by_product_id': 1}</field>
        </record>

        <menuitem
            id="menu_stock_production_lot_silver"
            name="Lotes/Números Seriales"
            parent="stock.menu_stock_inventory_control"
            action="action_stock_production_lot_silver"
            sequence="10"/>

    </data>
</odoo>
