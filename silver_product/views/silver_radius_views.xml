<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_silver_radius_form_inherit_product" model="ir.ui.view">
            <field name="name">silver.radius.form.inherit.product</field>
            <field name="model">silver.radius</field>
            <field name="inherit_id" ref="silver_network.view_silver_radius_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='radius']/group[1]" position="inside">
                    <field name="stock_lot_id"/>

                                        <label for="brand_id" />
                    <div class="o_row d-flex align-items-center">
                        <field name="brand_id"  nolabel="1"/>
                        <field name="brand_logo" widget="image" class="ms-2" style="width: 24px; height: 24px;" invisible="not brand_id"/>
                    </div>



                    <!--field name="hardware_model_id"/-->

                    <!--field name="software_version"/>
                    <field name="firmware_version"/-->
                    <!--field name="serial_number"/-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>
