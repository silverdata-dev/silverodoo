<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_silver_hardware_model_tree" model="ir.ui.view">
            <field name="name">silver.hardware.model.tree</field>
            <field name="model">silver.hardware.model</field>
            <field name="arch" type="xml">
                <tree string="Modelos">
                    <field name="name"/>
                    <field name="brand_id"/>
                                                <field name="etype"/>
                </tree>
            </field>
        </record>

        <record id="view_silver_hardware_model_form" model="ir.ui.view">
            <field name="name">silver.hardware.model.form</field>
            <field name="model">silver.hardware.model</field>
            <field name="arch" type="xml">
                <form string="Modelo">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="brand_id"/>
                            <field name="etype"/>
                            <field name="manual" invisible="etype!='olt'"/>
                            <field name="onu_profile_id" required="etype=='onu'" invisible="etype!='onu'"/>
                            <field name="active"/>
                        </group>
                        <notebook>
                            <page string="Productos">
                                <field name="product_ids"/>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_silver_hardware_model" model="ir.actions.act_window">
            <field name="name">Modelos</field>
            <field name="res_model">silver.hardware.model</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
