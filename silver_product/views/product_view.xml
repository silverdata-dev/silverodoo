        <record id="product_product_inherit_silver"  model="ir.ui.view">
            <field name="name">product.product.form.inherit.silver</field>
            <field name="model">product.product</field>
  <field name="priority">32</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

 <xpath expr="//notebook/page[1]" position="before">
                    <page string="Resumen">
                        <group>
                              <group>
                                  <!--field name="tracking"/>
                                  <field name="type"/-->
                    <field name="type"/>
                                <field name="uom_id"  invisible="type=='service'"/>
                                <field name="etype" invisible="type=='service'"/>
                                  <label for="product_brand_id" invisible="type=='service'"/>
                    <div class="o_row d-flex align-items-center" invisible="type=='service'">
                        <field name="product_brand_id"  nolabel="1"/>
                        <field name="product_brand_logo" widget="image" class="ms-2" style="width: 24px; height: 24px;" invisible="not product_brand_id"/>
                    </div>
                                <field name="hardware_model_id"
                                       context="{'default_etype':etype, 'default_brand_id':product_brand_id}"
                                       domain="[('etype','=',etype),('brand_id','=',product_brand_id)]"
                                       invisible="type=='service'" options="{'no_create_edit': False, 'no_quick_create': True}"/>
<!--field name="service_type_id" invisible="type!='service'" /-->

                            </group>


                            <group>
                        <field name="list_price"/>
                                <field name="categ_id"/>
                                <field name="property_stock_inventory"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                                <xpath expr="//field[@name='type']" position="after">
                                    <field name="is_internet" invisible="1"/>
                    <field name="service_type_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"
                           invisible="type!='service'" required="type=='service'"/>
                </xpath>


                <xpath expr="//page[@name='general_information']" position="attributes">
                    <attribute name="string">Información</attribute>
                </xpath>

            </field>

        </record>

        <record id="product_template_form_view_inherit_silver" model="ir.ui.view">
            <field name="name">product.template.form.inherit.silver</field>
            <field name="model">product.template</field>
  <field name="priority">32</field>
            <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
            <field name="arch" type="xml">

                  <xpath expr="//notebook/page[1]" position="before">
                    <page string="Resumen">
                        <group>
                            <group>
                                                                  <!--field name="tracking"/>
                                  <field name="type"/-->
                    <field name="type"/>
                                <field name="uom_id"  invisible="type=='service'"/>
                                <field name="etype" invisible="type=='service'"/>
                                  <label for="product_brand_id" invisible="type=='service'"/>
                    <div class="o_row d-flex align-items-center" invisible="type=='service'">
                        <field name="product_brand_id"  nolabel="1"/>
                        <field name="product_brand_logo" widget="image" class="ms-2" style="width: 24px; height: 24px;" invisible="not product_brand_id"/>
                    </div>
                                <field name="hardware_model_id"
                                       context="{'default_etype':etype}"
                                       domain="[('etype','=',etype)]"
                                       invisible="type=='service'" options="{'no_create_edit': False, 'no_quick_create': True}"/>

                            </group>

                            <group>
                        <field name="list_price"/>
                                <field name="categ_id"/>
                                <field name="property_stock_inventory"/>
                            </group>
                        </group>
                    </page>
                </xpath>


                <!-- 1. Replace Header Buttons -->
                <!--xpath expr="//header" position="inside">
                        <button string="Imprimir etiquetas" type="object" name="action_open_label_layout"/>
                        <button string="Actualizar la cantidad " type="object" name="action_update_quantity_on_hand" invisible="type != 'product'"/>
                        <button string="Reabastecer" type="action" name="355" context="{'default_product_tmpl_id': id}" invisible="type != 'product'"/>
                </xpath-->


                                <xpath expr="//field[@name='type']" position="after">
                                    <field name="is_internet" invisible="1"/>
                    <field name="service_type_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"
                           invisible="type!='service'" required="type=='service'"/>
                </xpath>

                <!-- 2. Replace the Stat Button Box -->
                <xpath expr="//div[@name='button_box']" position="inside">
                        <button class="oe_stat_button" name="open_pricelist_rules" icon="fa-list-ul" type="object">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="pricelist_item_count"/>
                                </span>
                                <span invisible="pricelist_item_count == 1">Precios extra</span>
                                <span invisible="pricelist_item_count != 1">Precio extra</span>
                            </div>
                        </button>



                        <!--button string="Lote / Números de serie" type="object" name="action_open_product_lot" invisible="tracking == 'none'" class="oe_stat_button" icon="fa-bars"/-->
                        <button string="Reglas de Estrategia de Traslado" type="object" name="action_view_related_putaway_rules" class="oe_stat_button" icon="fa-random" invisible="type == 'service'" context="{'invisible_handle': True, 'single_product': product_variant_count == 1}"/>


                </xpath>


                <xpath expr="//page[@name='general_information']" position="attributes">
                    <attribute name="string">Información</attribute>
                </xpath>


                <!-- 3. Add Priority to Title -->
                <!--xpath expr="//field[@name='name']" position="before">
                    <field name="priority" widget="priority" class="me-3"/>
                </xpath-->


                <!-- 4. Add Recurring Invoices checkbox -->
                <xpath expr="//div[@name='options']" position="inside">
                    <span class="d-inline-block">
                        <field name="recurring_invoices_ok"/>
                        <label for="recurring_invoices_ok"/>
                    </span>
                </xpath>

                <!-- 5. Add UoM fields to General Information -->
                <xpath expr="//page[@name='general_information']//group[@name='group_general']" position="inside">
                    <field name="uom_id" options="{'no_create': True}" on_change="1" required="1"/>
                    <!--field name="uom_po_id" options="{'no_create': True}" on_change="1" required="1"/-->
                </xpath>

                <!-- 6. Add custom fields to Standard Price group -->

                 <xpath expr="//page[@name='general_information']//group[@name='group_standard_price']" position="inside">
                    <label for="product_brand_id" string="Marca"/>
                    <div class="o_row d-flex align-items-center">
                        <field name="product_brand_id" required="is_required_brand == True" placeholder="Marca" nolabel="1"/>
                        <field name="product_brand_logo" widget="image" class="ms-2" style="width: 24px; height: 24px;" invisible="not product_brand_id"/>
                    </div>
                     <field name="hardware_model_id"/>
                    <field name="is_required_brand" invisible="1"/>
                    <field name="number_list_partner"/>
                    <field name="allow_negative_stock" invisible="type != 'product'"/>
                    <field name="is_commission_product" widget="boolean_toggle"/>
                    <field name="commission_percentage" invisible="is_commission_product == False" widget="percentage"/>
                </xpath>



                 <xpath expr="//page[@name='inventory']//group[@name='group_lots_and_weight']" position="inside">
                    <field name="qty_extra_stock"/>
                     <label for="weight"/>
                     <field name="weight"/>
                </xpath>


                <!-- 8. Add new Notebook Pages -->
                <xpath expr="//notebook" position="inside">
                    <page name="fields_isp" string="Datos ISP" invisible="(not is_internet) or (type != 'service')">


                            <group string="Ancho de Banda Descarga/Subida">
                                <label for="burst_limit_upload" string="Límite" />
                                <div>
                                    <field name="download_bandwidth" class="oe_inline"/>-<field name="upload_bandwidth" class="oe_inline"/>&amp;nbsp;Mbits/s
                                </div>
                                <label for="burst_limit_upload" string="Mínimos" />
                                <div>
                                    <field name="min_download_bandwidth" class="oe_inline"/>-<field name="min_upload_bandwidth" class="oe_inline"/>&amp;nbsp;Mbits/s
                                </div>

                                <label for="burst_limit_upload" string="Ráfaga" />
                                <div>
                                    <field name="burst_limit_download" class="oe_inline" placeholder="unlimited"/>-<field name="burst_limit_upload" placeholder="unlimited" class="oe_inline"/>&amp;nbsp;Mbits/s
                                </div>
                                <label for="burst_threshold_upload" string="Umbral de Ráfaga" />
                                <div >
                                    <field name="burst_threshold_download" class="oe_inline" placeholder="unlimited"/>-<field name="burst_threshold_upload" class="oe_inline" placeholder="unlimited"/> Mbits/s
                                </div>
                                <label for="burst_time_upload" string="Tiempo de Ráfaga" />
                                <div >
                                    <field name="burst_time_download" class="oe_inline" placeholder="0"/>-<field name="burst_time_upload" class="oe_inline" placeholder="0"/> s
                                </div>
                                    <field name="queue_priority" placeholder="8" class="oe_inline"/>

                            </group>

                    </page>
                    <!--page name="fields_iptv" string="Datos IPTV">
                        <group>
                            <group>
                                <field name="is_iptv"/>
                                <field name="code_ott"/>
                            </group>
                            <group/>
                        </group>
                    </page-->
                </xpath>
            </field>
        </record>

        <record id="product_template_tree_view_inherit_silver" model="ir.ui.view">
            <field name="name">product.template.list.inherit.silver</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">

                <xpath expr="//list" position="replace">
                    <list string="Product" multi_edit="1" sample="1">
                        <header>
                            <button string="Print Labels" type="object" name="action_open_label_layout"/>
                        </header>
                        <field name="product_variant_count" invisible="1"/>
                        <field name="sale_ok" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="cost_currency_id" invisible="1"/>
                        <!--field name="priority" widget="priority" optional="show" nolabel="1"/-->
                        <field name="name" string="Product Name"/>
                        <field name="default_code" optional="show"/>
                        <field name="barcode" optional="hide" readonly="product_variant_count > 1"/>
                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company" optional="hide"/>
                        <field name="list_price" string="Sales Price" widget="monetary" options="{'currency_field': 'currency_id'}" optional="show" decoration-muted="not sale_ok"/>
                        <field name="standard_price" widget="monetary" options="{'currency_field': 'cost_currency_id'}" optional="show" readonly="1"/>
                        <field name="categ_id" optional="hide"/>


                        <field name="type" invisible="1"/>
                        <field name="uom_id" readonly="1" optional="show" groups="uom.group_uom"/>
                        <field name="active" invisible="1"/>
                        <field name="activity_exception_decoration" widget="activity_exception"/>
                    </list>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
