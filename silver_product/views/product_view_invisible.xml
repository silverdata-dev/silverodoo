<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_invisible_button" model="ir.ui.view">
            <field name="name">product.template.form.invisible.button</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="silver_product.product_template_form_view_inherit_silver"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]//button[1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                  <xpath expr="//field[@name='product_tag_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                  <xpath expr="//field[@name='number_list_partner']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>



            </field>
        </record>
    </data>
</odoo>
