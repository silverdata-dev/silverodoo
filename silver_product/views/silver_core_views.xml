<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_silver_core_form_inherit_product" model="ir.ui.view">
            <field name="name">silver.core.form.inherit.product</field>
            <field name="model">silver.core</field>
            <field name="inherit_id" ref="silver_network.view_silver_core_form"/>
            <field name="arch" type="xml">
               <xpath expr="//field[@name='node_ids']"  position="after">
                   <separator string="Equipo"/>
                   <field name="product_id"  context="{'default_etype':'core'}"  domain="[('etype','=','core')]"/>
                    <field name="stock_lot_id" context="{'default_etype':'core', 'default_product_id':product_id}"
                           domain="[('product_id','=',product_id)]"  options="{'no_create_edit': False, 'no_quick_create': True}"/>
                                        <label for="brand_id" />
                    <div class="o_row d-flex align-items-center">
                        <field name="brand_id"  nolabel="1"/>
                        <field name="brand_logo" widget="image" class="ms-2" style="width: 24px; height: 24px;" invisible="not brand_id"/>
                    </div>

<field name="hardware_model_id"/>

                  <!--field name="software_version"/>
                    <field name="firmware_version"/-->
                     <!--field name="serial_number"/-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>
