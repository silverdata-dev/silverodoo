<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="view_stock_lot_form_silver" model="ir.ui.view">
        <field name="name">stock.lot.form.silver</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
                <!--
                    Añadimos un contexto al campo product_id.
                    Este contexto será interceptado por nuestra modificación en el modelo
                    product.product para abrir la vista del product.template.
                -->
                 <xpath expr="//field[@name='product_id']" position="before">
                    <field name="external_equipment" widget="boolean_toggle"/>


                        <field name="applied_accounting_cost" widget="boolean_toggle"/>
                </xpath>
                 <xpath expr="//field[@name='product_id']" position="after">

                                         <label for="brand_id" readonly="product_id!=False"/>
                    <div class="o_row d-flex align-items-center">
                        <field name="brand_id"  nolabel="1"/>
                        <field name="brand_logo" widget="image" class="ms-2" style="width: 24px; height: 24px;" invisible="not brand_id"/>
                    </div>




                     <field name="hardware_model_id" readonly="product_id!=False" domain="[('brand_id', '=', brand_id)]"/>
                     <field name="onu_profile_id" invisible="etype != 'onu'"/>
                     <!--field name="software_version" readonly="product_id!=False"/>
                     <field name="firmware_version" readonly="product_id!=False"/-->

                        <field name="serial_number" invisible="1"/>

                        <field name="etype"/>
                            <field name="manual" invisible="etype!='olt'"/>
                     <field name="mac_address"/>
                 </xpath>
                <field name="product_id" position="attributes">
                    <attribute name="required">external_equipment != True</attribute>
                    <attribute name="context">{'open_product_template': True, 'default_etype':context.get('default_etype')}</attribute>
                    <attribute name="on_change">1</attribute>
                    <attribute name="options">{'no_create_edit': False, 'no_quick_create': True}</attribute>
                   <attribute name="domain"
               add="['|',
                       ('etype', '=', context.get('default_etype')),
                       ('etype', '=', False)
                    ]"
               separator="&amp;"/>
                </field>
                <xpath expr="//form" position="attributes">
                    <attribute name="class" add="form_stocklot"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>