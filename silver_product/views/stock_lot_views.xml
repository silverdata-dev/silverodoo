<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="view_stock_lot_form_silver" model="ir.ui.view">
        <field name="name">stock.lot.form.silver</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
                <!--
                    Añadimos un contexto al campo product_id.
                    Este contexto será interceptado por nuestra modificación en el modelo
                    product.product para abrir la vista del product.template.
                -->
                 <xpath expr="//field[@name='product_id']" position="before">
                    <field name="external_equipment" widget="boolean_toggle"/>
                        <field name="serial_number" invisible="1"/>
                        <field name="applied_accounting_cost" widget="boolean_toggle"/>
                </xpath>
                <field name="product_id" position="attributes">
                    <attribute name="context">{'open_product_template': True}</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>