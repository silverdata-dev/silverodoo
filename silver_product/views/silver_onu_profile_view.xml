<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="silver_onu_profile_view_tree" model="ir.ui.view">
            <field name="name">silver.onu.profile.tree</field>
            <field name="model">silver.onu.profile</field>
            <field name="arch" type="xml">
                <tree string="ONU Profiles">
                    <field name="name"/>
                    <field name="hardware_model_ids" widget="many2many_tags"/>
                    <field name="firmware_version"/>
                    <field name="provisioning_status"/>
                </tree>
            </field>
        </record>

        <record id="silver_onu_profile_view_form" model="ir.ui.view">
            <field name="name">silver.onu.profile.form</field>
            <field name="model">silver.onu.profile</field>
            <field name="arch" type="xml">
                <form string="ONU Profile">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="hardware_model_ids" widget="many2many_tags"/>
                            <field name="firmware_version"/>
                            <field name="provisioning_status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="silver_onu_profile_action" model="ir.actions.act_window">
            <field name="name">ONU Profiles</field>
            <field name="res_model">silver.onu.profile</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
