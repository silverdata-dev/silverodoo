<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_silver_contract_select_onu_wizard_form" model="ir.ui.view">
            <field name="name">silver.contract.select.onu.wizard.form</field>
            <field name="model">silver.contract.select.onu.wizard</field>
            <field name="arch" type="xml">
                <form string="Seleccionar ONU Descubierta">
                    <group>
                        <field name="contract_id" invisible="1"/>
                        <field name="olt_id" invisible="1"/>
                        <field name="discovered_onu_id"
                               domain="[('olt_id', '=', olt_id)]"
                               context="{'default_olt_id': olt_id}"
                               options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <footer>
                        <button name="action_apply_onu" string="Aplicar" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
