<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_provisioning_wizard_form" model="ir.ui.view">
            <field name="name">provisioning.wizard.form</field>
            <field name="model">silver.provisioning.wizard</field>
            <field name="arch" type="xml">
                <form string="Asistente de Aprovisionamiento OLT">
                    <group>
                        <field name="contract_id" invisible="1"/>
                        <field name="olt_id"/>
                        <field name="pon_port" required="1"/>
                        <field name="onu_id" required="1"/>
                        <field name="serial_number" invisible="context.get('hide_serial')"/>
                    </group>
                    <footer>
                        <button name="action_apply_provision" string="Aprovisionar" type="object" class="btn-primary" invisible="context.get('action') != 'provision'"/>
                        <button name="action_apply_cutoff" string="Cortar Servicio" type="object" class="btn-primary" invisible="context.get('action') != 'cutoff'"/>
                        <button name="action_apply_reconnection" string="Reconectar Servicio" type="object" class="btn-primary" invisible="context.get('action') != 'reconnection'"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
