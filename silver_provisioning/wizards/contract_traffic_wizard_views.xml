<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_silver_contract_traffic_wizard_form" model="ir.ui.view">
            <field name="name">silver.contract.traffic.wizard.form</field>
            <field name="model">silver.contract.traffic.wizard</field>
            <field name="arch" type="xml">
                <form string="Real-Time Traffic">
                    <sheet>
                        <group>
                            <field name="interface" readonly="1"/>
                            <field name="core_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="rate_down"/>
                            <field name="rate_up"/>
                        </group>
                        <field name="speed_chart" widget="ppp_line_speed_chart" nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_silver_contract_traffic_wizard_form_chart_only" model="ir.ui.view">
            <field name="name">silver.contract.traffic.wizard.form.chart.only</field>
            <field name="model">silver.contract.traffic.wizard</field>
            <field name="arch" type="xml">
                <form string="Real-Time Traffic">
                    <field name="speed_chart" widget="ppp_line_speed_chart" nolabel="1"/>
                    <footer>
                        <button string="Cerrar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
