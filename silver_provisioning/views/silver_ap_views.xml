<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit silver.ap form view -->
        <record id="view_silver_ap_form_provisioning_inherit" model="ir.ui.view">
            <field name="name">silver.ap.form.provisioning.inherit</field>
            <field name="model">silver.ap</field>
            <field name="inherit_id" ref="silver_network.view_silver_ap_form"/>
            <field name="arch" type="xml">
                <!--xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" type="object" name="action_view_contracts" icon="fa-arrows-v">
                        <field string="Contratos" name="contract_count" widget="statinfo"/>
                    </button>
                </xpath-->


   <xpath expr="//page[1]" position="before">

                      <page string="Contratos">

                        <field name="contract_ids">
                            <list create="false">

                                 <field name="id" column_invisible="1"/>
                                <field name="name" widget="link_record"/>
                                <field name="partner_id" widget="many2one"/>
                                <field name="state"/>
                            </list>
                        </field>
                         <div class="o_action_manager">
                              <button name="action_create_contract" type="object" string="Crear" class="btn-link nobold"/>
                                        </div>
                      </page>

                </xpath>

            </field>
        </record>
    </data>
</odoo>
