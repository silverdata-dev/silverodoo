<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_silver_core_form_provisioning_inherit" model="ir.ui.view">
            <field name="name">silver.core.form.provisioning.inherit</field>
            <field name="model">silver.core</field>
            <field name="inherit_id" ref="silver_network.view_silver_core_form"/>
            <field name="arch" type="xml">
                <!--xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" type="object" name="action_view_contracts" icon="fa-arrows-v">
                        <field string="Contratos" name="contract_count" widget="statinfo"/>
                    </button>


                </xpath-->
<xpath expr="//field[@name='ip_address_ids']//list" position="inside">
    <field name="contract_id" widget="button" action="action_view_contract"/>

</xpath>
<xpath expr="//field[@name='ip_address_ids']//list" position="attributes">
    <attribute name="default_order">contract_id asc, public asc, ip_int asc</attribute>
</xpath>

  <xpath expr="//page[1]" position="before">
                      <page string="Contratos">

                        <field name="contract_ids">
                            <list create="false">
                               <field name="id" column_invisible="1"/>
                                        <field name="name"
                                          widget="record_link"
                                        />
                                <field name="partner_id" widget="many2one"/>
                                <field name="state"/>
                            </list>
                        </field>
                         <div class="o_action_manager">
                              <button name="action_create_contract" type="object" string="Crear" class="btn-link nobold"/>
                                        </div>
                      </page>

                </xpath>

            </field>
        </record>

        <record id="view_silver_core_tree_provisioning_inherit" model="ir.ui.view">
            <field name="name">silver.core.list.provisioning.inherit</field>
            <field name="model">silver.core</field>
            <field name="inherit_id" ref="silver_network.view_silver_core_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ip']" position="after">
                    <field name="contract_count"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
