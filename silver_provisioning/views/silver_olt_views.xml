<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_silver_olt_form_provisioning_inherit" model="ir.ui.view">
            <field name="name">silver.olt.form.provisioning.inherit</field>
            <field name="model">silver.olt</field>
            <field name="inherit_id" ref="silver_network.view_silver_olt_form"/>
            <field name="arch" type="xml">
                <!-- Mover el botón de descubrir ONUs al lado del de probar conexión -->
                <xpath expr="//button[@name='action_connect_olt']" position="after">
                    <button name="action_discover_onus"
                            type="object"
                            string="Descubrir ONUs"
                            class="oe_highlight"/>
                </xpath>

                <!-- Añadir el botón de sincronización en la cabecera (quitando el de descubrir) -->
                <xpath expr="//header" position="inside">
                    <button name="action_sync_olt_manual"
                            type="object"
                            string="Sincronizar Cambios con ONUs"
                            class="oe_highlight"
                            invisible="not pending_changes"
                            confirm="¿Está seguro de que desea aplicar los cambios guardados a todas las ONUs activas en esta OLT? Esta acción no se puede deshacer."/>
                </xpath>



                <!-- Añadir la pestaña de Contratos -->
                <xpath expr="//page[1]" position="before">
                    <page string="Contratos">
                        <field name="contract_ids"/>
                    </page>
                </xpath>

                <!-- Añadir campo de Prioridad VLAN (PCP) a la configuración WAN existente -->
                <xpath expr="//group[@name='pppoe_1']//field[@name='vlan_id']" position="after">
                    <field name="vlan_priority"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

