<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_silver_vlan_form_inherit" model="ir.ui.view">
              <field name="name">silver.vlan.form</field>
            <field name="model">silver.vlan</field>
            <field name="inherit_id" ref="silver_network.view_silver_vlan_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Contratos">

                        <field name="contract_ids">
                            <tree create="false">
                               <field name="id" column_invisible="1"/>
                                        <field name="name"
                                          widget="record_link"
                                        />
                                <field name="partner_id" widget="many2one"/>
                                <field name="state"/>
                            </tree>
                        </field>
                         <div class="o_action_manager">
                              <button name="action_create_contract" type="object" string="Crear" class="btn-link nobold"/>
                                        </div>

                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
