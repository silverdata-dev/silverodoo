<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Árbol -->
    <record id="silverdoc_topic_view_tree" model="ir.ui.view">
        <field name="name">silverdoc.topic.tree</field>
        <field name="model">silverdoc.topic</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="module_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario -->
    <record id="silverdoc_topic_view_form" model="ir.ui.view">
        <field name="name">silverdoc.topic.form</field>
        <field name="model">silverdoc.topic</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="module_id"/>
                    </group>
                    <notebook>
                        <page string="Documentos">
                            <field name="document_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción de Ventana -->
    <record id="silverdoc_topic_action" model="ir.actions.act_window">
        <field name="name">Temas de Documentación</field>
        <field name="res_model">silverdoc.topic</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
