<odoo>
    <data>
        <!-- silver.ip.pool tree view -->
        <record id="silver_ip_pool_view_tree" model="ir.ui.view">
            <field name="name">silver.ip.pool.view.tree</field>
            <field name="model">silver.ip.pool</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="network_address"/>
                    <field name="gateway"/>
                </tree>
            </field>
        </record>

        <!-- silver.ip.pool form view -->
        <record id="silver_ip_pool_view_form" model="ir.ui.view">
            <field name="name">silver.ip.pool.view.form</field>
            <field name="model">silver.ip.pool</field>
            <field name="arch" type="xml">
                <form string="IP Pool">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="network_address"/>
                            <field name="gateway"/>
                        </group>
                        <notebook>
                            <page string="IP Addresses">
                                <field name="ip_line_ids">
                                    <tree editable="bottom">
                                        <field name="ip_address"/>
                                        <field name="is_assigned"/>
                                        <field name="assigned_contract_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- silver.ip.pool action window -->
        <record id="silver_ip_pool_action" model="ir.actions.act_window">
            <field name="name">IP Pools</field>
            <field name="res_model">silver.ip.pool</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
