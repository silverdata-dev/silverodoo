<odoo>
    <data>
        <!-- silver.wifi.channel.line tree view -->
        <record id="silver_wifi_channel_line_view_tree" model="ir.ui.view">
            <field name="name">silver.wifi.channel.line.view.tree</field>
            <field name="model">silver.wifi.channel.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="channel_number"/>
                    <field name="frequency_band"/>
                </tree>
            </field>
        </record>

        <!-- silver.wifi.channel.line form view -->
        <record id="silver_wifi_channel_line_view_form" model="ir.ui.view">
            <field name="name">silver.wifi.channel.line.view.form</field>
            <field name="model">silver.wifi.channel.line</field>
            <field name="arch" type="xml">
                <form string="WiFi Channel">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="channel_number"/>
                            <field name="frequency_band"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- silver.wifi.channel.line action window -->
        <record id="silver_wifi_channel_line_action" model="ir.actions.act_window">
            <field name="name">WiFi Channels</field>
            <field name="res_model">silver.wifi.channel.line</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
