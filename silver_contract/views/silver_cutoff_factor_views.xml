<odoo>
    <data>
        <!-- silver.cutoff.factor tree view -->
        <record id="silver_cutoff_factor_view_tree" model="ir.ui.view">
            <field name="name">silver.cutoff.factor.view.tree</field>
            <field name="model">silver.cutoff.factor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- silver.cutoff.factor form view -->
        <record id="silver_cutoff_factor_view_form" model="ir.ui.view">
            <field name="name">silver.cutoff.factor.view.form</field>
            <field name="model">silver.cutoff.factor</field>
            <field name="arch" type="xml">
                <form string="Factor de Corte">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- silver.cutoff.factor action window -->
        <record id="silver_cutoff_factor_action" model="ir.actions.act_window">
            <field name="name">Factores de Corte</field>
            <field name="res_model">silver.cutoff.factor</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
