<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- SilverContractHolding -->
        <record id="silver_contract_holding_view_tree" model="ir.ui.view">
            <field name="name">silver.contract.holding.tree</field>
            <field name="model">silver.contract.holding</field>
            <field name="arch" type="xml">
                <tree><field name="name"/><field name="partner_id"/></tree>
            </field>
        </record>
        <record id="silver_contract_holding_view_form" model="ir.ui.view">
            <field name="name">silver.contract.holding.form</field>
            <field name="model">silver.contract.holding</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="silver_contract_holding_action" model="ir.actions.act_window">
            <field name="name">Grupos de Contratos (Holdings)</field>
            <field name="res_model">silver.contract.holding</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- SilverReceptionChannel -->
        <record id="silver_reception_channel_action" model="ir.actions.act_window">
            <field name="name">Canales de Recepci√≥n</field>
            <field name="res_model">silver.reception.channel</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- SilverContractTag -->
        <record id="silver_contract_tag_view_tree" model="ir.ui.view">
            <field name="name">silver.contract.tag.tree</field>
            <field name="model">silver.contract.tag</field>
            <field name="arch" type="xml">
                <tree><field name="name"/><field name="is_technical"/></tree>
            </field>
        </record>
        <record id="silver_contract_tag_view_form" model="ir.ui.view">
            <field name="name">silver.contract.tag.form</field>
            <field name="model">silver.contract.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="color" widget="color_picker"/>
                            <field name="is_technical"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="silver_contract_tag_action" model="ir.actions.act_window">
            <field name="name">Etiquetas de Contrato</field>
            <field name="res_model">silver.contract.tag</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
