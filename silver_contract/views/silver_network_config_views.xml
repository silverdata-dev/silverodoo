<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- WiFi Channels -->
        <record id="silver_wifi_channel_line_action" model="ir.actions.act_window">
            <field name="name">Canales WiFi</field>
            <field name="res_model">silver.wifi.channel.line</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- IP Pools -->
        <record id="silver_ip_pool_view_tree" model="ir.ui.view">
            <field name="name">silver.ip.pool.tree</field>
            <field name="model">silver.ip.pool</field>
            <field name="arch" type="xml">
                <tree><field name="name"/><field name="network_address"/></tree>
            </field>
        </record>
        <record id="silver_ip_pool_view_form" model="ir.ui.view">
            <field name="name">silver.ip.pool.form</field>
            <field name="model">silver.ip.pool</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="network_address"/>
                            <field name="gateway"/>
                        </group>
                        <notebook>
                            <page string="Direcciones IP">
                                <field name="ip_line_ids"/>


                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="silver_ip_pool_action" model="ir.actions.act_window">
            <field name="name">Pools de IP</field>
            <field name="res_model">silver.ip.pool</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
