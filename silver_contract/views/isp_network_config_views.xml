<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- WiFi Channels -->
        <record id="isp_wifi_channel_line_action" model="ir.actions.act_window">
            <field name="name">Canales WiFi</field>
            <field name="res_model">isp.wifi.channel.line</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- IP Pools -->
        <record id="isp_ip_pool_view_tree" model="ir.ui.view">
            <field name="name">isp.ip.pool.tree</field>
            <field name="model">isp.ip.pool</field>
            <field name="arch" type="xml">
                <tree><field name="name"/><field name="network_address"/></tree>
            </field>
        </record>
        <record id="isp_ip_pool_view_form" model="ir.ui.view">
            <field name="name">isp.ip.pool.form</field>
            <field name="model">isp.ip.pool</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="network_address"/>
                            <field name="gateway"/>
                        </group>
                        <notebook>
                            <page string="Direcciones IP">
                                <field name="ip_line_ids">
                                    <tree editable="bottom">
                                        <field name="ip_address"/>
                                        <field name="is_assigned"/>
                                        <field name="assigned_contract_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="isp_ip_pool_action" model="ir.actions.act_window">
            <field name="name">Pools de IP</field>
            <field name="res_model">isp.ip.pool</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
