<odoo>
    <data>
        <!-- silver.plan.type list view -->
        <record id="silver_plan_type_view_tree" model="ir.ui.view">
            <field name="name">silver.plan.type.view.list</field>
            <field name="model">silver.plan.type</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="service_type_id"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <!-- silver.plan.type form view -->
        <record id="silver_plan_type_view_form" model="ir.ui.view">
            <field name="name">silver.plan.type.view.form</field>
            <field name="model">silver.plan.type</field>
            <field name="arch" type="xml">
                <form string="Plan Type">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="service_type_id"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- silver.plan.type action window -->
        <record id="silver_plan_type_action" model="ir.actions.act_window">
            <field name="name">Plan Types</field>
            <field name="res_model">silver.plan.type</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
