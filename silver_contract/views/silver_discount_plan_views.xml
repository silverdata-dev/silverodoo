<odoo>
    <data>
        <!-- silver.discount.plan tree view -->
        <record id="silver_discount_plan_view_tree" model="ir.ui.view">
            <field name="name">silver.discount.plan.view.tree</field>
            <field name="model">silver.discount.plan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="discount_type"/>
                    <field name="amount"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- silver.discount.plan form view -->
        <record id="silver_discount_plan_view_form" model="ir.ui.view">
            <field name="name">silver.discount.plan.view.form</field>
            <field name="model">silver.discount.plan</field>
            <field name="arch" type="xml">
                <form string="Discount Plan">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="discount_type"/>
                            <field name="amount"/>
                            <field name="active"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- silver.discount.plan action window -->
        <record id="silver_discount_plan_action" model="ir.actions.act_window">
            <field name="name">Discount Plans</field>
            <field name="res_model">silver.discount.plan</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
