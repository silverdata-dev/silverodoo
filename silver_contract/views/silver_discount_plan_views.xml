<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="silver_discount_plan_view_tree" model="ir.ui.view">
            <field name="name">silver.discount.plan.tree</field>
            <field name="model">silver.discount.plan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="discount_type"/>
                    <field name="amount"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="silver_discount_plan_view_form" model="ir.ui.view">
            <field name="name">silver.discount.plan.form</field>
            <field name="model">silver.discount.plan</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="discount_type"/>
                            <field name="amount"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="silver_discount_plan_action" model="ir.actions.act_window">
            <field name="name">Planes de Descuento</field>
            <field name="res_model">silver.discount.plan</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
