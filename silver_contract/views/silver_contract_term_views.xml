<odoo>
    <data>
        <!-- silver.contract.term list view -->
        <record id="silver_contract_term_view_tree" model="ir.ui.view">
            <field name="name">silver.contract.term.view.list</field>
            <field name="model">silver.contract.term</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="months"/>
                </list>
            </field>
        </record>

        <!-- silver.contract.term form view -->
        <record id="silver_contract_term_view_form" model="ir.ui.view">
            <field name="name">silver.contract.term.view.form</field>
            <field name="model">silver.contract.term</field>
            <field name="arch" type="xml">
                <form string="Contract Term">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="months"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- silver.contract.term action window -->
        <record id="silver_contract_term_action" model="ir.actions.act_window">
            <field name="name">Contract Terms</field>
            <field name="res_model">silver.contract.term</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
