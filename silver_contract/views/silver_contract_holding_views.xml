<odoo>
    <data>
        <!-- silver.contract.holding list view -->
        <record id="silver_contract_holding_view_tree" model="ir.ui.view">
            <field name="name">silver.contract.holding.view.list</field>
            <field name="model">silver.contract.holding</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="partner_id"/>
                </list>
            </field>
        </record>

        <!-- silver.contract.holding form view -->
        <record id="silver_contract_holding_view_form" model="ir.ui.view">
            <field name="name">silver.contract.holding.view.form</field>
            <field name="model">silver.contract.holding</field>
            <field name="arch" type="xml">
                <form string="Contract Holding">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                        </group>
                        <notebook>
                            <page string="Contracts">
                                <field name="contract_ids"/>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- silver.contract.holding action window -->
        <record id="silver_contract_holding_action" model="ir.actions.act_window">
            <field name="name">Contract Holdings</field>
            <field name="res_model">silver.contract.holding</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
