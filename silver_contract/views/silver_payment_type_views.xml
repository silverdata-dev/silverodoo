<odoo>
    <data>
        <!-- silver.payment.type tree view -->
        <record id="silver_payment_type_view_tree" model="ir.ui.view">
            <field name="name">silver.payment.type.view.tree</field>
            <field name="model">silver.payment.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- silver.payment.type form view -->
        <record id="silver_payment_type_view_form" model="ir.ui.view">
            <field name="name">silver.payment.type.view.form</field>
            <field name="model">silver.payment.type</field>
            <field name="arch" type="xml">
                <form string="Payment Type">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- silver.payment.type action window -->
        <record id="silver_payment_type_action" model="ir.actions.act_window">
            <field name="name">Payment Types</field>
            <field name="res_model">silver.payment.type</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
