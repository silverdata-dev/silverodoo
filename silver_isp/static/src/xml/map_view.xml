<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="silver_isp.AssetMapView" owl="1">
        <div class="o_action_manager">
            <div class="o_control_panel">
                <!-- You can add buttons or additional information here if needed -->
            </div>
            <div class="o_content">
                <div class="map-filters">
                    <strong>Filter by Asset Type:</strong>
                    <div class="d-inline-block ml-2" t-ref="model_filter_container">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="all-models" value="all"
                                   t-att-checked="allFiltersChecked"
                                   t-on-change="onFilterChange"/>
                            <label class="form-check-label" for="all-models">All</label>
                        </div>
                        <t t-foreach="state.assetModels" t-as="model" t-key="model">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input model-filter" type="checkbox"
                                       t-att-id="model" t-att-value="model"
                                       t-att-checked="state.selectedModels[model]"
                                       t-on-change="onFilterChange"/>
                                <label class="form-check-label" t-att-for="model">
                                    <t t-esc="model.replace('isp.', '')"/>
                                </label>
                            </div>
                        </t>
                    </div>
                </div>
                <div t-ref="asset_map" class="map-container"/>
                <div t-ref="popup" class="ol-popup">
                    <a href="#" t-ref="popup_closer" class="ol-popup-closer"/>
                    <div t-ref="popup_content"/>
                </div>
            </div>
        </div>
    </t>

</templates>