<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="isp_cable_view_form" model="ir.ui.view">
            <field name="name">isp.cable.form</field>
            <field name="model">isp.cable</field>
            <field name="arch" type="xml">
                <form string="Cable">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="cable_type"/>
                            <field name="fiber_count"/>
                            <field name="length"/>
                            <field name="brand_id"/>
                            <field name="model"/>
                            <field name="astate"/>
                        </group>
                        <notebook>
                            <page string="Route">
                                <field name="route_asset_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="asset_type"/>
                                        <field name="code"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="isp_cable_view_tree" model="ir.ui.view">
            <field name="name">isp.cable.tree</field>
            <field name="model">isp.cable</field>
            <field name="arch" type="xml">
                <tree string="Cables">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="cable_type"/>
                    <field name="fiber_count"/>
                    <field name="length"/>
                    <field name="astate"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_isp_cable" model="ir.actions.act_window">
            <field name="name">Cables</field>
            <field name="res_model">isp.cable</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
