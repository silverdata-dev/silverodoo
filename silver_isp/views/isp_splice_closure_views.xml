<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="isp_splice_closure_view_form" model="ir.ui.view">
            <field name="name">isp.splice.closure.form</field>
            <field name="model">isp.splice.closure</field>
            <field name="arch" type="xml">
                <form string="Manga">
                    <sheet>
                        <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="node_id"/>
                            <field name="zone_id"/>
                            </group>
                            <group>
                                                        <field name="closure_type"/>
                            <field name="capacity"/>
                            <field name="brand_id"/>
                            <field name="model"/>
                            <field name="astate"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Location">
                                <group>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="zip"/>
                                    <field name="state_id"/>
                                    <field name="country_id"/>
                                    <field name="gps_lat"/>
                                    <field name="gps_lon"/>
                                </group>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="isp_splice_closure_view_tree" model="ir.ui.view">
            <field name="name">isp.splice.closure.tree</field>
            <field name="model">isp.splice.closure</field>
            <field name="arch" type="xml">
                <tree string="Mangas">
                    <field name="name"/>
                    
                                                <field name="node_id"/>
                            <field name="zone_id"/>

                    <field name="closure_type"/>
                    <field name="capacity"/>
                    <field name="astate"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_isp_splice_closure" model="ir.actions.act_window">
            <field name="name">Mangas</field>
            <field name="res_model">isp.splice.closure</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
