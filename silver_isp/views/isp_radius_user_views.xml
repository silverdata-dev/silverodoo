<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action for isp.radius.user -->
        <record id="action_isp_radius_user" model="ir.actions.act_window">
            <field name="name">RADIUS Users</field>
            <field name="res_model">isp.radius.user</field>
            <field name="view_mode">tree,form</field>
              <!--field name="view_ids" eval="[(5, 0, 0), (0, 0, [ref('view_isp_radius_user_tree'), ref('view_isp_radius_user_form')])]" /-->

        </record>

        <!-- Tree view for isp.radius.user -->
        <record id="view_isp_radius_user_tree" model="ir.ui.view">
            <field name="name">isp.radius.user.tree</field>
                <field name="model">isp.radius.user</field>
            <field name="arch" type="xml">
                <tree string="RADIUS Users">
                    <field name="username"/>
                    <field name="profile"/>
                    <field name="disabled"/>
                    <field name="comment"/>
                </tree>
            </field>
        </record>

        <!-- Form view for isp.radius.user -->
        <record id="view_isp_radius_user_form" model="ir.ui.view">
            <field name="name">isp.radius.user.form</field>
            <field name="model">isp.radius.user</field>
            <field name="arch" type="xml">
                <form string="RADIUS User">
                    <sheet>
                        <group>
                            <field name="radius_id" invisible="1"/>
                            <field name="username"/>
                            <field name="password" password="True"/>
                            <field name="profile"/>
                            <field name="disabled"/>
                            <field name="comment"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
