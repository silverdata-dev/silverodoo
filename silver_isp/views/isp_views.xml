<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Acciones Ficticias -->
        <record id="action_isp_placeholder" model="ir.actions.act_window">
            <field name="name">Acción de marcador de posición</field>
            <field name="res_model">isp.core</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('id', '=', -1)]</field> <!-- No mostrar registros -->
        </record>

        <!-- Accion y Menu para isp.node -->
        <record id="action_isp_node" model="ir.actions.act_window">
            <field name="name">Nodos ISP</field>
            <field name="res_model">isp.node</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_silver_isp_root" name="Silver ISP" sequence="10"/>
        <menuitem id="menu_isp_node" name="Nodos" parent="menu_silver_isp_root" action="action_isp_node" sequence="10"/>

        <!-- Vistas para isp.node -->
        <record id="view_isp_node_tree" model="ir.ui.view">
            <field name="name">isp.node.tree</field>
            <field name="model">isp.node</field>
            <field name="arch" type="xml">
                <tree string="Nodos ISP" default_order="name desc">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="street"/>
                </tree>
            </field>
        </record>

        <record id="view_isp_node_form" model="ir.ui.view">
            <field name="name">isp.node.form</field>
            <field name="model">isp.node</field>
            <field name="arch" type="xml">
                <form string="Nodo ISP">
                    <header>
                        <button name="create_core" string="Crear Equipo Core" type="object" invisible="1"/>     
                        <button name="action_create_ticket_node" string="Crear Ticket" icon="fa-ticket" type="object" class="oe_highlight"/>
                        <button name="create_olt" string="Crear Equipo Olt" type="object"/>
                    </header>
                    <sheet string="Nodo ISP">
                        <div class="oe_button_box" name="button_box"> 
                            <button class="oe_stat_button" type="action" name="%(action_isp_placeholder)d" icon="fa-arrows-v">
                                <field string="Equipos Core" name="core_count" widget="statinfo"/>
                            </button>   
                            <button class="oe_stat_button" type="action" name="%(action_isp_placeholder)d" icon="fa-ticket">
                                <field string="Tickets" name="support_ticket_count" widget="statinfo"/>
                            </button> 
                            <button class="oe_stat_button" type="action" name="%(stock.action_picking_tree_all)d" icon="fa-arrows-v">
                                <field string="Movimientos" name="stock_picking_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(action_isp_placeholder)d" icon="fa-arrows-v">
                                <field string="Equipos Olt" name="olt_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre del Nodo"/> - <field name="code" placeholder="Codigo del Nodo"/>
                            </h1>
                        </div>
                        <notebook name="networks_isp">
                            <page name="geolocaloze" string="Datos Ubicacion">
                                <group>
                                    <group>
                                        <field name="country_id"/>
                                        <field name="state_id"/>
                                        <field name="zip"/>
                                        <field name="journal_id"/>
                                        <field name="account_analytic_id"/>
                                        <field name="account_cost_analytic_id"/>
                                    </group>
                                    <group>
                                        <field name="phone"/>
                                        <field name="street"/>
                                        <field name="street2"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Geolocalizacion">
                                        <label for="date_localization" string="Geolocalizacion"/>
                                        <div name="geolocalize">
                                            <span>Lat : </span><field name="node_latitude" nolabel="1" class="oe_inline"/>
                                            <span>, Long: </span><field name="node_longitude" nolabel="1" class="oe_inline"/>
                                            <br/>
                                            <span invisible="not date_localization">Actualizado el: </span>
                                            <field name="date_localization" nolabel="1" class="oe_inline"/>
                                        </div>
                                        <field name="distance"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Accion y Menu para isp.core -->
        <record id="action_isp_core" model="ir.actions.act_window">
            <field name="name">Equipos Core ISP</field>
            <field name="res_model">isp.core</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_isp_core" name="Equipos Core" parent="menu_silver_isp_root" action="action_isp_core" sequence="20"/>

        <!-- Vistas para isp.core -->
        <record id="view_isp_core_tree" model="ir.ui.view">
            <field name="name">isp.core.tree</field>
            <field name="model">isp.core</field>
            <field name="arch" type="xml">
                <tree string="Equipos Core ISP" default_order="name desc">
                    <field name="name"/>
                    <field name="hostname_core"/>
                    <field name="brand_core_id"/>
                    <field name="model_core"/>
                    <field name="ip_core"/>
                    <field name="port_core"/>
                    <field name="user_core"/>
                    <field name="state" widget="badge" decoration-danger="state == 'down'" decoration-success="state == 'active'"/>
                </tree>
            </field>
        </record>

        <record id="view_isp_core_form" model="ir.ui.view">
            <field name="name">isp.core.form</field>
            <field name="model">isp.core</field>
            <field name="arch" type="xml">
                <form string="Equipo Core ISP">
                    <header>
                        <button name="create_ap" string="Crear Equipo AP" type="object"/>
                        <button name="create_radius" string="Crear Radius" type="object" invisible="not is_isp_radius"/>  
                    </header>
                    <sheet string="Equipo Core ISP">
                        <div class="oe_button_box" name="button_box"> 
                            <button class="oe_stat_button" type="action" name="%(action_isp_placeholder)d" icon="fa-arrows-v">
                                <field string="Equipos OLT" name="olt_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(action_isp_placeholder)d" invisible="not is_isp_radius" icon="fa-arrows-v">
                                <field string="Radius" name="radius_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(action_isp_placeholder)d" icon="fa-arrows-v">
                                <field string="Equipos AP" name="ap_count" widget="statinfo"/>
                            </button>
                            <button name="action_create_nas" type="object" class="oe_stat_button" icon="fa-signal" string="Agregar Nas" invisible="not is_isp_radius"/>
                            <button name="action_remove_nas" type="object" class="oe_stat_button" icon="fa-signal" string="Eliminar Nas" invisible="not is_isp_radius"/>
                            <button name="action_connect_core" type="object" class="oe_stat_button" icon="fa-signal" string="Probar Conexion"/>
                            <button class="oe_stat_button" type="action" name="%(action_isp_placeholder)d" icon="fa-link">
                                <field string="Contratos" name="contracts_cores_count" widget="statinfo"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Active" invisible="state == 'down'"/>
                        <widget name="web_ribbon" title="Down" bg_color="bg-danger" invisible="state == 'active'"/>
                        <field name="state" invisible="1"/>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group name="core">
                            <group>
                                <field name="hostname_core"/>
                                <field name="software_version"/>
                                <field name="node_id"/>
                                <field name="node_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="brand_core_id"/>
                                <field name="model_core"/>
                                <field name="is_isp_radius" invisible="1"/>
                                <field name="radius_id" invisible="not is_isp_radius"/>
                                <field name="networks_device_id" invisible="not is_device_network" options="{'no_create': True, 'no_create_edit':True}" widget="many2many_tags"/>
                                <field name="company_id" invisible="1"/>
                                <field name="user_nass" invisible="not is_isp_radius"/>
                                <field name="password_nass" password="True" invisible="not is_isp_radius"/>
                                <field name="port_coa" invisible="not is_isp_radius"/>
                            </group>
                        </group>
                        <group name="core_conexion" string="Datos Conexion">
                            <group>
                                <field name="ip_core"/>
                                <field name="port_core"/>
                                <field name="type_connection" invisible="brand_description != 'hua'"/>
                                <field name="kex_algorithms_ids" invisible="brand_description != 'hua'" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="user_core"/>
                                <field name="password_core" password="True"/>
                                <button class="oe_inline oe_link " name="action_send_password" string=" →Enviar Contraseña" type="object"/>
                            </group>
                        </group>
                        <group name="type_access_net" string="Direccionamiento IP">
                            <group>
                                <field name="type_access_net"/>
                            </group>
                            <group invisible="type_access_net != 'dhcp_leases'">
                                <field name="dhcp_custom_server"/>
                                <field name="interface"/>
                                <field name="is_multiple_vlans" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <group name="core_vlans" string="Vlans">
                            <group>
                                <field name="is_active_vlans" widget="boolean_toggle"/>
                                <field name="cvlan" invisible="not is_active_vlans"/>
                                <field name="svlan" invisible="not is_active_vlans"/>
                                <field name="brand_description" invisible="1"/>
                                <field name="isp_vlans_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="is_device_network" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name="config" string="Configuraciones Generales">
                                <group name="config_mac">
                                    <group string="MAC"> 
                                        <field name="is_extract_mac_core" widget="boolean_toggle"/>
                                    </group>
                                    <group string="Gestión de Eliminación">
                                        <field name="cutoff_reconnection_ipaddress" widget="boolean_toggle"/>
                                        <field name="cutoff_reconnection_piloto" widget="boolean_toggle"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Tipo de Core"> 
                                        <field name="pooOnlyCore" widget="boolean_toggle"/>
                                        <field name="is_type_core_access" widget="boolean_toggle"/>
                                        <field name="is_type_core_bandwidth" widget="boolean_toggle"/>
                                        <field name="is_fiber" widget="boolean_toggle" invisible="not is_type_core_bandwidth"/>
                                        <field name="is_wifi" widget="boolean_toggle" invisible="not is_type_core_bandwidth"/>
                                        <field name="is_fttb_queue" widget="boolean_toggle" invisible="not is_type_core_bandwidth"/>
                                        <field name="is_change_mac" widget="boolean_toggle"/>
                                        <field name="is_extract_ip_lease" widget="boolean_toggle"/>
                                        <field name="is_extract_ip_arp" widget="boolean_toggle"/>
                                    </group>
                                    <group string="Radius"> 
                                        <field name="is_isp_radius" widget="boolean_toggle"/>
                                        <field name="is_mikrotik_radius" widget="boolean_toggle"/>
                                        <field name="user_profile_radius"/>
                                    </group>
                                    <group string="Simple Queues" invisible="not is_type_core_bandwidth"> 
                                        <field name="is_simple_queue" widget="boolean_toggle"/>
                                        <field name="is_gestion_queue_parent" widget="boolean_toggle"/>
                                    </group>
                                    <group string="Queue Tree y Mangle" invisible="not is_type_core_bandwidth"> 
                                        <field name="is_queue_tree" widget="boolean_toggle"/>
                                        <field name="is_mangle" widget="boolean_toggle"/>
                                    </group>
                                </group>
                                <group string="Address List">
                                    <group> 
                                        <field name="type_manager_address_list"/>
                                        <field name="is_cutoff_reconnection" widget="boolean_toggle"/>
                                        <field name="is_reconnection_ip_address_list" widget="boolean_toggle"/>
                                    </group>
                                    <group> 
                                        <field name="is_custom_address_list_channel" widget="boolean_toggle"/>
                                        <field name="is_custom_address_list" widget="boolean_toggle"/>
                                        <field name="custom_list_active" invisible="not is_custom_address_list"/>
                                        <field name="custom_list_cuttoff" invisible="not is_custom_address_list"/>
                                        <field name="custom_list_layoff" invisible="not is_custom_address_list"/>
                                        <field name="is_product_address_list" widget="boolean_toggle"/>
                                    </group>
                                </group>
                                <group string="PPPoE">
                                    <group> 
                                        <field name="is_pppoe_wifi" widget="boolean_toggle"/>
                                        <field name="is_key_pppoe" widget="boolean_toggle"/>
                                        <field name="key_pppoe" invisible="not is_key_pppoe"/>
                                        <field name="is_used_dynamic_pool" widget="boolean_toggle"/>
                                    </group>
                                    <group> 
                                        <field name="is_local_address_pppoe" widget="boolean_toggle"/>
                                        <field name="is_pppoe_profile" widget="boolean_toggle"/>
                                        <field name="is_product_pppoe_profile" widget="boolean_toggle" invisible="not is_type_core_bandwidth"/>
                                    </group>
                                </group>
                                <group string="Address List por canal" invisible="not is_custom_address_list_channel">
                                    <field name="custom_channel_ids" nolabel="1"/>
                                </group>
                                <group string="OLT-CORE">
                                    <field name="is_unique_vlans" widget="boolean_toggle"/>
                                    <field name="is_desactive_core" widget="boolean_toggle"/>
                                    <field name="is_desactive_olt" widget="boolean_toggle"/>
                                </group>
                            </page>
                            <page name="ip_address" string="Direcciones IP" invisible="type_access_net not in ['dhcp', 'dhcp_leases', 'dhcp_leases_vlan']">
                                <group>
                                    <field name="ip_address_line_ids" nolabel="1"/>
                                </group>
                                <group>
                                    <field name="ip_address_ids" nolabel="1"/>
                                </group>
                            </page>
                            <page name="config_port_slot" string="Configuracion Interface GPON" invisible="brand_description != 'hua'">
                                <group>
                                    <div class="oe_button_box" name="button_box">
                                        <button name="action_calculate_gpon" type="object" class="oe_stat_button" icon="fa-spinner" string="Calcular GigabitEthernet"/>
                                    </div>
                                </group>
                                <group string="Datos Técnicos">
                                    <group>
                                        <field name="slot"/>
                                        <field name="port_card"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="isp_core_port_line_ids" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>
