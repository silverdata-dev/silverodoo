<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- IspRouterInterfaceWizard -->
        <record id="view_isp_router_interface_wizard_tree" model="ir.ui.view">
            <field name="name">isp.router.interface.wizard.tree</field>
            <field name="model">isp.router.interface.wizard</field>
            <field name="arch" type="xml">
                <tree string="Router Interfaces">
                    <field name="router_id"/>
                </tree>
            </field>
        </record>

        <record id="view_isp_router_interface_wizard_form" model="ir.ui.view">
            <field name="name">isp.router.interface.wizard.form</field>
            <field name="model">isp.router.interface.wizard</field>
            <field name="arch" type="xml">
                <form string="Router Interface">
                    <sheet>
                        <group>
                            <field name="router_id"/>
                        </group>
                        <notebook>
                            <page string="Interfaces">
                                <field name="line_ids">
                                    <tree string="Interfaces">
                                        <field name="name"/>
                                        <field name="mac_address"/>
                                        <field name="type"/>
                                        <field name="running"/>
                                        <field name="disabled"/>
                                        <field name="comment"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_isp_router_interface_wizard" model="ir.actions.act_window">
            <field name="name">Router Interfaces</field>
            <field name="res_model">isp.router.interface.wizard</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_isp_router_interface_wizard" name="Router Interfaces" parent="menu_isp_infrastructure" action="action_isp_router_interface_wizard" sequence="20"/>

        <!-- IspRouterRouteWizard -->
        <record id="view_isp_router_route_wizard_tree" model="ir.ui.view">
            <field name="name">isp.router.route.wizard.tree</field>
            <field name="model">isp.router.route.wizard</field>
            <field name="arch" type="xml">
                <tree string="Router Routes">
                    <field name="router_id"/>
                </tree>
            </field>
        </record>

        <record id="view_isp_router_route_wizard_form" model="ir.ui.view">
            <field name="name">isp.router.route.wizard.form</field>
            <field name="model">isp.router.route.wizard</field>
            <field name="arch" type="xml">
                <form string="Router Route">
                    <sheet>
                        <group>
                            <field name="router_id"/>
                        </group>
                        <notebook>
                            <page string="Routes">
                                <field name="line_ids">
                                    <tree string="Routes">
                                        <field name="dst_address"/>
                                        <field name="gateway"/>
                                        <field name="distance"/>
                                        <field name="active"/>
                                        <field name="static"/>
                                        <field name="comment"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_isp_router_route_wizard" model="ir.actions.act_window">
            <field name="name">Router Routes</field>
            <field name="res_model">isp.router.route.wizard</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_isp_router_route_wizard" name="Router Routes" parent="menu_isp_infrastructure" action="action_isp_router_route_wizard" sequence="30"/>

        <!-- IspRouterPppActiveWizard -->
        <record id="view_isp_router_ppp_active_wizard_tree" model="ir.ui.view">
            <field name="name">isp.router.ppp.active.wizard.tree</field>
            <field name="model">isp.router.ppp.active.wizard</field>
            <field name="arch" type="xml">
                <tree string="PPP Active Connections">
                    <field name="router_id"/>
                </tree>
            </field>
        </record>

        <record id="view_isp_router_ppp_active_wizard_form" model="ir.ui.view">
            <field name="name">isp.router.ppp.active.wizard.form</field>
            <field name="model">isp.router.ppp.active.wizard</field>
            <field name="arch" type="xml">
                <form string="PPP Active Connection">
                    <sheet>
                        <group>
                            <field name="router_id"/>
                        </group>
                        <notebook>
                            <page string="Active Connections">
                                <field name="line_ids">
                                    <tree string="Active Connections">
                                        <field name="name"/>
                                        <field name="service"/>
                                        <field name="caller_id"/>
                                        <field name="address"/>
                                        <field name="uptime"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Realtime Speed">
                                <field name="ppp_speed_chart" widget="ppp_speed_chart"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_isp_router_ppp_active_wizard" model="ir.actions.act_window">
            <field name="name">PPP Active Connections</field>
            <field name="res_model">isp.router.ppp.active.wizard</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_isp_router_ppp_active_wizard" name="PPP Active Connections" parent="menu_isp_infrastructure" action="action_isp_router_ppp_active_wizard" sequence="40"/>

        <!-- IspRouterFirewallWizard -->
        <record id="view_isp_router_firewall_wizard_tree" model="ir.ui.view">
