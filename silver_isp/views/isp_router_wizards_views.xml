                                        <field name="comment"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_isp_router_queue_wizard" model="ir.actions.act_window">
            <field name="name">Router Queues</field>
            <field name="res_model">isp.router.queue.wizard</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_isp_router_queue_wizard" name="Router Queues" parent="menu_isp_infrastructure" action="action_isp_router_queue_wizard" sequence="60"/>
    </data>
</odoo>