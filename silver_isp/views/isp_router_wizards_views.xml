                                        <field name="protocol"/>
                                        <field name="comment"/>
                                        <field name="disabled"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_isp_router_firewall_wizard" model="ir.actions.act_window">
            <field name="name">Firewall Rules</field>
            <field name="res_model">isp.router.firewall.wizard</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_isp_router_firewall_wizard" name="Firewall Rules" parent="menu_isp_infrastructure" action="action_isp_router_firewall_wizard" sequence="50"/>

        <!-- IspRouterQueueWizard -->
        <record id="view_isp_router_queue_wizard_tree" model="ir.ui.view">
            <field name="name">isp.router.queue.wizard.tree</field>
            <field name="model">isp.router.queue.wizard</field>
            <field name="arch" type="xml">
                <tree string="Router Queues">
