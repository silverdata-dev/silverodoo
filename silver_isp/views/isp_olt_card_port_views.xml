<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- isp.olt.card.port -->
        <record id="action_isp_olt_card_port" model="ir.actions.act_window">
            <field name="name">Puertos OLT</field>
            <field name="res_model">isp.olt.card.port</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_isp_olt_card_port_tree" model="ir.ui.view">
            <field name="name">isp.olt.card.port.tree</field>
            <field name="model">isp.olt.card.port</field>
            <field name="arch" type="xml">
                <tree string="Puertos OLT ISP" default_order="name desc">
                    <field name="name"/>
                    <field name="num_port"/>
                    <field name="olt_card_id"/>
                    <field name="type_access_net"/>
                </tree>
            </field>
        </record>

        <record id="view_isp_olt_card_port_form" model="ir.ui.view">
            <field name="name">isp.olt.card.port.form</field>
            <field name="model">isp.olt.card.port</field>
            <field name="arch" type="xml">
                <form string="Puerto OLT ISP">
                    <header>
                        <button name="create_splitter_primary" string="Crear Splitter Primario" type="object"/>
                        <button name="create_splitter_secondary" string="Crear Splitter Secundario" type="object"/>
                        <button name="active_contracts" type="object" class="oe_stat_button" string="Activar Contratos"/>
                    </header>
                    <sheet string="Puerto OLT ISP">
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_splitter1" icon="fa-arrows-v">
                                <field string="Splitter Primario" name="splitter1_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_splitter2" icon="fa-arrows-v">
                                <field string="Splitter Secundario" name="splitter2_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_contracts" icon="fa-link">
                                <field string="Contratos" name="contracts_port_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group name="port">
                            <group>
                                <field name="num_port"/>
                            </group>
                            <group>
                                <field name="olt_card_id"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name="ip_addresses" string="Direcciones IP">
                                <field name="ip_address_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="cidr"/>
                                        <field name="gateway"/>
                                        <field name="status"/>
                                        <field name="assigned_to"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>
