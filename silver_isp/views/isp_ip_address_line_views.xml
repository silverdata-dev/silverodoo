<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- isp.ip.address.line -->
        <record id="action_isp_ip_address_line" model="ir.actions.act_window">
            <field name="name">Líneas de Dirección IP ISP</field>
            <field name="res_model">isp.ip.address.line</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_isp_ip_address_line_tree" model="ir.ui.view">
            <field name="name">isp.ip.address.line.tree</field>
            <field name="model">isp.ip.address.line</field>
            <field name="arch" type="xml">
                <tree string="Líneas de Dirección IP ISP">
                    <field name="name"/>
                    <field name="core_id"/>
                    <field name="olt_id"/>
                    <field name="card_id"/>
                    <field name="port_id"/>
                    <field name="radius_id"/>
                    <field name="is_tr_069"/>
                </tree>
            </field>
        </record>

        <record id="view_isp_ip_address_line_form" model="ir.ui.view">
            <field name="name">isp.ip.address.line.form</field>
            <field name="model">isp.ip.address.line</field>
            <field name="arch" type="xml">
                <form string="Línea de Dirección IP ISP">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="core_id"/>
                            <field name="olt_id"/>
                            <field name="card_id"/>
                            <field name="port_id"/>
                            <field name="radius_id"/>
                            <field name="is_tr_069"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
