<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- isp.core.port.line -->
        <record id="action_isp_core_port_line" model="ir.actions.act_window">
            <field name="name">Líneas de Puerto de Core ISP</field>
            <field name="res_model">isp.core.port.line</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_isp_core_port_line_tree" model="ir.ui.view">
            <field name="name">isp.core.port.line.tree</field>
            <field name="model">isp.core.port.line</field>
            <field name="arch" type="xml">
                <tree string="Líneas de Puerto de Core ISP">
                    <field name="name"/>
                    <field name="core_id"/>
                </tree>
            </field>
        </record>

        <record id="view_isp_core_port_line_form" model="ir.ui.view">
            <field name="name">isp.core.port.line.form</field>
            <field name="model">isp.core.port.line</field>
            <field name="arch" type="xml">
                <form string="Línea de Puerto de Core ISP">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="core_id"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
