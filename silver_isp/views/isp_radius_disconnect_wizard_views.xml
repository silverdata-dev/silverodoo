<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="isp_radius_disconnect_wizard_form_view" model="ir.ui.view">
            <field name="name">isp.radius.disconnect.wizard.form</field>
            <field name="model">isp.radius.disconnect.wizard</field>
            <field name="arch" type="xml">
                <form string="Disconnect/CoA Request">
                    <sheet>
                        <group>
                            <field name="radius_id" invisible="1"/>
                            <field name="username"/>
                            <field name="nas_identifier"/>
                            <field name="coa_attributes"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Send Disconnect Request" name="action_send_disconnect_request" type="object" class="oe_highlight"/>
                        <button string="Send CoA Request" name="action_send_coa_request" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
