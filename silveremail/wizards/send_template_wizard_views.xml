<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_send_template_wizard" model="ir.ui.view">
            <field name="name">silveremail.send.template.wizard.form</field>
            <field name="model">silveremail.send_template_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="template_name"/>
                    </group>
                    <footer>
                        <button name="action_send_template" string="Enviar" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_window_send_template_wizard" model="ir.actions.act_window">
            <field name="name">Enviar Template de Email</field>
            <field name="res_model">silveremail.send_template_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
