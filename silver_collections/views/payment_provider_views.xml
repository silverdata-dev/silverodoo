<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista para PaymentProvider -->
    <record id="view_payment_provider_form" model="ir.ui.view">
        <field name="name">payment.provider.form</field>
        <field name="model">payment.provider</field>
        <field name="arch" type="xml">
            <form string="Proveedor de Pago">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="state"/>
                        <field name="journal_id"/>
                    </group>
                    <group string="Credenciales API">
                        <field name="api_url"/>
                        <field name="api_token" password="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_payment_provider_tree" model="ir.ui.view">
        <field name="name">payment.provider.tree</field>
        <field name="model">payment.provider</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="state"/>
                <field name="journal_id"/>
            </tree>
        </field>
    </record>

    <!-- Acción y Menú para PaymentProvider -->
    <record id="action_payment_provider" model="ir.actions.act_window">
        <field name="name">Proveedores de Pago</field>
        <field name="res_model">payment.provider</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_payment_provider"
              name="Proveedores de Pago"
              parent="account.menu_finance_configuration"
              action="action_payment_provider"
              sequence="100"/>
</odoo>
