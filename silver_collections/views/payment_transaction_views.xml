<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista para PaymentTransaction -->
    <record id="view_payment_transaction_form" model="ir.ui.view">
        <field name="name">payment.transaction.form</field>
        <field name="model">payment.transaction</field>
        <field name="arch" type="xml">
            <form string="Transacción de Pago" create="false" edit="false">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="reference"/>
                            <field name="provider_id"/>
                            <field name="contract_id"/>
                            <field name="payment_id"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id"/>
                            <field name="provider_reference"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Logs API">
                            <group>
                                <field name="raw_request" nolabel="1"/>
                                <field name="raw_response" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_payment_transaction_tree" model="ir.ui.view">
        <field name="name">payment.transaction.tree</field>
        <field name="model">payment.transaction</field>
        <field name="arch" type="xml">
            <list create="false">
                <field name="reference"/>
                <field name="contract_id"/>
                <field name="provider_id"/>
                <field name="amount"/>
                <field name="state"/>
                <field name="provider_reference"/>
            </list>
        </field>
    </record>

    <!-- Acción y Menú para PaymentTransaction -->
    <record id="action_payment_transaction" model="ir.actions.act_window">
        <field name="name">Transacciones de Pago</field>
        <field name="res_model">payment.transaction</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_payment_transaction"
              name="Transacciones de Pago"
              parent="account.menu_finance_entries"
              action="action_payment_transaction"
              sequence="100"/>
</odoo>
