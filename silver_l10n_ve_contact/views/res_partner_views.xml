<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--
            Este record hereda de la vista de contactos de silver_crm.
            IMPORTANTE: Debes reemplazar 'silver_crm.view_partner_form_silver'
            con el ID externo real de tu vista de formulario de contactos.
        -->
        <record id="view_partner_form_l10n_ve" model="ir.ui.view">
            <field name="name">res.partner.form.l10n.ve</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="silver_crm.view_partner_form_silver"/>
            <field name="arch" type="xml">
                <!--
                    Agrega los campos de la localización venezolana en una posición
                    adecuada dentro de tu vista. Aquí hay un ejemplo usando xpath.
                    Ajusta el 'expr' para que coincida con un campo existente en tu vista.
                -->
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="nationality"/>
                    <field name="identification_id" invisible="1"/>
                </xpath>

                <!--
                    En Odoo 17, los campos 'vat' y 'l10n_latam_identification_type_id'
                    son los campos principales para RIF/Cédula.
                    La localización de Venezuela los hace visibles y los posiciona.
                    Este xpath asegura que el campo de tipo de identificación
                    (ej. V, E, J, G) se muestre junto al RIF.
                -->
                <xpath expr="//field[@name='vat']" position="before">
                    <field name="l10n_latam_identification_type_id"
                           options='{"no_open": True, "no_create": True}'/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
