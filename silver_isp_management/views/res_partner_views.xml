<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_isp_contract_button" model="ir.ui.view">
            <field name="name">res.partner.isp.contract.button</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action" name="%(action_isp_contract)d"
                        context="{'default_partner_id': active_id}" icon="fa-file-text-o">
                        <field name="contract_count" widget="statinfo" string="Contratos"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>
