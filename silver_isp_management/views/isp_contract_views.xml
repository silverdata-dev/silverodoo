<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Herencia de la Vista Formulario para añadir campos de ISP -->
        <record id="view_silver_contract_form_isp_inherit" model="ir.ui.view">
            <field name="name">silver.contract.form.isp.inherit</field>
            <field name="model">silver.contract</field>
            <field name="inherit_id" ref="silver_contract.view_silver_contract_form"/>
            <field name="arch" type="xml">
                <!-- Añadir campos en el formulario existente -->
                <xpath expr="//group[@name='main_group']" position="inside">
                    <group string="Facturación ISP">
                        <field name="recurring_template_id"/>
                    </group>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Equipos Instalados">
                        <field name="equipment_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="serial_number"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Acción de Ventana para Contratos (ahora apunta al modelo correcto) -->
        <!-- Es mejor sobreescribir la acción que creamos para no dejar basura -->
        <record id="silver_isp_management.action_isp_contract" model="ir.actions.act_window">
            <field name="name">Contratos ISP</field>
            <field name="res_model">silver.contract</field>
            <field name="view_mode">tree,form</field>
            <!-- Podemos especificar que use las vistas de silver_contract si es necesario -->
            <field name="view_id" ref="silver_contract.view_silver_contract_tree"/>
        </record>

    </data>
</odoo>