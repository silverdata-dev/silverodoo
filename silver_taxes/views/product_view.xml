<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_inherit_silver_taxes" model="ir.ui.view">
            <field name="name">product.template.form.inherit.silver.taxes</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="purchase.product_template_purchase_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='bill']" position="inside">
                    <field name="supplier_taxes_id" colspan="2" widget="many2many_tags" readonly="purchase_ok == 0" context="{'default_type_tax_use':'purchase'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
